<xhtml:div xmlns:xhtml="http://www.w3.org/1999/xhtml"
      xmlns:xforms="http://www.w3.org/2002/xforms"
      xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
      xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
      xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
      xmlns:saxon="http://saxon.sf.net/"
      xmlns:fb="http://orbeon.org/oxf/xml/form-builder"

      id="fb-toolbox">

    <xxforms:variable name="lang" select="xxforms:instance('fr-language-instance')"/>

    <xhtml:div class="fb-toolbox-inside">

        <xhtml:dl id="fb-toolbox-dl" class="accordion-menu">
            <!-- Controls -->
            <xhtml:dt id="fb-toolbox-controls-dt" class="a-m-t a-m-d-expand fb-toolbox-section-title">
                <xforms:output value="$form-resources/controls/label"/>
            </xhtml:dt>
            <xhtml:dd class="a-m-d a-m-d-expand fb-toolbox-controls-section">
                <xhtml:div class="bd">
                    <!-- XVC toolbox -->
                    <xhtml:div class="fb-tools fb-xvc">
                        <xforms:trigger appearance="minimal" ref="$xcv/cut-trigger" id="cut-trigger">
                            <xforms:label>
                                <xhtml:img src="/apps/fr/style/images/silk/cut.png" alt="{$form-resources/cut/label}" title="{$form-resources/cut/label}"/>
                            </xforms:label>
                            <xforms:action ev:event="DOMActivate" type="xpath" xmlns:toolboxOps="java:org.orbeon.oxf.fb.ToolboxOps">
                                toolboxOps:cutToClipboard($current-td)
                            </xforms:action>
                        </xforms:trigger>
                        <xforms:trigger appearance="minimal" ref="$xcv/copy-trigger" id="copy-trigger">
                            <xforms:label>
                                <xhtml:img src="/forms/orbeon/builder/images/copy.gif" alt="{$form-resources/copy/label}" title="{$form-resources/copy/label}"/>
                            </xforms:label>
                            <xforms:action ev:event="DOMActivate" type="xpath" xmlns:toolboxOps="java:org.orbeon.oxf.fb.ToolboxOps">
                                toolboxOps:copyToClipboard($current-td)
                            </xforms:action>
                        </xforms:trigger>
                        <xforms:trigger appearance="minimal" ref="$xcv/paste-trigger" id="paste-trigger">
                            <xforms:label>
                                <xhtml:img src="/apps/fr/style/images/silk/paste_plain.png" alt="{$form-resources/paste/label}" title="{$form-resources/paste/label}"/>
                            </xforms:label>
                            <xforms:action ev:event="DOMActivate" type="xpath" xmlns:toolboxOps="java:org.orbeon.oxf.fb.ToolboxOps">
                                toolboxOps:pasteFromClipboard($current-td)
                            </xforms:action>
                        </xforms:trigger>
                        <!-- Reload components -->
                        <xforms:trigger appearance="minimal" class="fb-reload-components-trigger">
                            <xforms:label>
                                <xhtml:img src="/apps/fr/style/images/silk/arrow_refresh_small.png" alt="{$form-resources/reload-components/label}" title="{$form-resources/reload-components/label}"/>
                            </xforms:label>
                            <xforms:action ev:event="DOMActivate">
                                <xforms:dispatch name="xxforms-instance-invalidate" target="fb-components-instance"/>
                                <xforms:send submission="fb-load-components"/>
                            </xforms:action>
                        </xforms:trigger>
                    </xhtml:div>
                    <!-- Sections, grids, etc. toolbox -->
                    <xhtml:div class="fb-tools">
                        <!-- Add new section -->
                        <xhtml:div class="fb-tool">
                            <xforms:trigger id="insert-new-section-trigger">
                                <xforms:label>
                                    <xhtml:img src="/apps/fr/style/images/silk/layout_add.png" alt=""/>
                                    <xhtml:span><xforms:output value="$form-resources/new-section/label"/></xhtml:span>
                                </xforms:label>
                                <xforms:action ev:event="DOMActivate" context="$body">
                                    <!-- Insert section -->

                                    <xxforms:variable name="old-section-index" select="index('fb-top-level-repeat')" as="xs:integer"/>

                                    <!-- Insert section template in the UI -->
                                    <xforms:insert context="." nodeset="fr:section | fr:repeat | fr:grid"
                                                   at="$old-section-index" position="after"
                                                   origin="instance('fb-section-template')"/>
                                    <xxforms:variable name="new-section" select="(fr:section | fr:repeat | fr:grid)[index('fb-top-level-repeat')]" as="element(fr:section)"/>

                                    <!-- Compute next section id -->
                                    <xforms:dispatch target="fr-form-model" name="fb-compute-section-id"/>
                                    <xxforms:variable name="new-section-name" select="concat('section-', $next-section-id)"/>

                                    <!-- Set xforms:label and xforms:help @ref values -->
                                    <xforms:setvalue ref="$new-section/xforms:label/@ref" value="concat('$form-resources/section-', $next-section-id, '/label')"/>
                                    <xforms:setvalue ref="$new-section/xforms:help/@ref" value="concat('$form-resources/section-', $next-section-id, '/help')"/>

                                    <!-- Set @id value -->
                                    <xforms:setvalue ref="$new-section/@id" value="concat($new-section-name, '-section')"/>

                                    <!-- Set @context value if @context present -->
                                    <xforms:setvalue ref="$new-section/@context" value="$new-section-name"/>

                                    <!-- Set @bind value if @bind present -->
                                    <xforms:setvalue ref="$new-section/@bind" value="concat($new-section-name, '-bind')"/>

                                    <!-- Insert container in the instance -->
                                    <xforms:action context="$form-instance">
                                        <xforms:insert context="." nodeset="*"
                                                       at="$old-section-index" position="after"
                                                       origin="xxforms:element($new-section-name)"/>
                                    </xforms:action>

                                    <!-- Insert resources placeholders for all languages -->
                                    <xforms:action xxforms:iterate="$resources/resource">
                                        <xforms:insert context="." nodeset="*"
                                                       origin="xxforms:element($new-section-name)"/>
                                        <xforms:insert context="*[last()]" origin="instance('fb-resource-template')/(label | help)"/>
                                        <xforms:setvalue ref="*[last()]/label" value="$form-resources/template/untitled-section"/>
                                    </xforms:action>

                                    <!-- Make sure the bind is created -->
                                    <xforms:action type="xpath" xmlns:controlOps="java:org.orbeon.oxf.fb.ControlOps">
                                        controlOps:ensureBindsByName($model, $new-section-name)
                                    </xforms:action>

                                    <!-- Open label editor for newly inserted section -->
                                    <!-- TODO: these ids don't exist anymore; instead, dispatch to fr-inplace-fb-top-level-section-editable-title -->
                                    <!--<xforms:toggle case="fr-inplace-fb-top-level-section-input-open-edit"/>-->
                                    <!--<xforms:setfocus control="fr-inplace-fb-top-level-section-input-open-input"/>-->

                                </xforms:action>
                            </xforms:trigger>
                        </xhtml:div>
                        <!-- Add grids -->
                        <xforms:group context="$current-top-level-block" ref="instance('fb-variables')/grids-triggers" appearance="xxforms:internal">
                            <xhtml:div class="fb-tool">
                                <xforms:trigger appearance="full">
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/images/silk/table_add.png" alt=""/>
                                        <xhtml:span><xforms:output value="$form-resources/new-grid/label"/></xhtml:span>
                                    </xforms:label>
                                    <xforms:action ev:event="DOMActivate">
                                        <xforms:insert context="$current-top-level-block" nodeset="fr:section | fr:repeat | fr:grid"
                                                       at="index('fb-section-content-repeat')" position="after"
                                                       origin="instance('fb-grid-1-template')"/>
                                    </xforms:action>
                                </xforms:trigger>
                            </xhtml:div>
                        </xforms:group>
                    </xhtml:div>
                    <!-- Controls and components -->
                    <xforms:repeat nodeset="instance('fb-components-instance')/xbl:xbl[xbl:binding]">
                        <xhtml:div class="fb-tools">
                            <xforms:group>
                                <!-- Display localized name -->
                                <xforms:label ref="(fb:metadata/fb:display-name[@lang = $lang], fb:metadata/fb:display-name[1])"/>

                                <xforms:repeat nodeset="xbl:binding" id="fb-components-template-repeat">

                                    <xxforms:variable name="binding" select="." as="element(xbl:binding)"/>

                                    <!-- Whether the component is a section component or not -->
                                    <xxforms:variable name="is-section-component" select="tokenize($binding/@class, '\s+') = 'fr-section-component'" as="xs:boolean"/>

                                    <xhtml:div class="fb-tool">
                                        <xforms:trigger id="fb-add-component-trigger" ref="instance('fb-variables')/(if ($is-section-component) then sections-triggers else controls-triggers)">
                                            <xforms:label>
                                                <xhtml:img src="{($binding/fb:metadata/fb:icon/fb:small-icon[@lang = $lang],$binding/fb:metadata/fb:icon/fb:small-icon[1], '/apps/fr/style/images/silk/plugin.png')[1]}" alt="" width="16" height="16"/>
                                                <xhtml:span><xforms:output value="($binding/fb:metadata/fb:display-name[@lang = $lang], $binding/fb:metadata/fb:display-name[1])[1]"/></xhtml:span>
                                            </xforms:label>
                                            <xforms:action ev:event="DOMActivate" if="$is-section-component">
                                                <!-- Insert a new section component -->

                                                <xxforms:variable name="current-section" select="$body/*[index('fb-top-level-repeat')]" as="element(fr:section)"/>

                                                <!-- Is the current section empty (i.e. no children non-XForms elements, or an empty grid)? -->
                                                <xxforms:variable name="is-current-section-empty" as="xs:boolean"
                                                                  select="not(exists($current-section/*[namespace-uri() != 'http://www.w3.org/2002/xforms']))
                                                                          or exists($current-section/fr:grid) and not(exists($current-section/fr:grid//*:td/*))"/>

                                                <!--<xforms:message>-->
                                                    <!--xxx <xforms:output value="$is-current-section-empty"/> xxx-->
                                                <!--</xforms:message>-->

                                                <xforms:action if="not($is-current-section-empty)">
                                                    <!-- Insert new section -->
                                                    <xforms:dispatch name="DOMActivate" target="insert-new-section-trigger"/>
                                                </xforms:action>

                                                <!-- Point to insert section -->
                                                <xxforms:variable name="insert-section" select="$body/*[index('fb-top-level-repeat')]" as="element(fr:section)"/>

                                                <!-- Remove existing fr:* if any -->
                                                <xforms:delete nodeset="$insert-section/fr:*"/>

                                                <!-- Insert reference to component -->
                                                <xforms:insert context="$insert-section" nodeset="*" origin="$binding/fb:metadata/fb:template/*[1]"/>

                                            </xforms:action>
                                            <xforms:action ev:event="DOMActivate" if="not($is-section-component)">
                                                <xforms:action type="xpath" xmlns:toolboxOps="java:org.orbeon.oxf.fb.ToolboxOps">
                                                    toolboxOps:insertNewControl($model, $binding)
                                                </xforms:action>
                                                <!-- Open label editor for newly inserted control -->
                                                <xforms:toggle case="fr-inplace-fb-control-label-control-edit"/>
                                                <xforms:setfocus control="fr-inplace-fb-control-label-control-input"/>
                                            </xforms:action>
                                        </xforms:trigger>
                                    </xhtml:div>
                                </xforms:repeat>
                            </xforms:group>
                        </xhtml:div>
                    </xforms:repeat>

                    <!--<xforms:trigger appearance="minimal">-->
                        <!--<xforms:label>test</xforms:label>-->
                        <!--<xxforms:invalidate-instances ev:event="DOMActivate"/>-->
                    <!--</xforms:trigger>-->

                </xhtml:div>
            </xhtml:dd>
            <xhtml:dt id="fb-toolbox-metadata-dt" class="a-m-t"><xforms:output value="$form-resources/metadata/label"/></xhtml:dt>
            <xhtml:dd class="a-m-d">
                <xhtml:div class="bd">
                    <!-- Metadata toolbox -->
                    <xhtml:div class="fb-tools fb-hide-alert">
                        <xhtml:div class="fr-grid">
                            <xhtml:div class="fr-grid-content">
                                <xhtml:div>
                                    <!-- Application name -->
                                    <xforms:output id="application-name-control" bind="application-name-bind"
                                                   class="fr-summary fr-search fr-static" incremental="true">
                                        <xforms:label ref="$form-resources/application-name/label"/>
                                        <xforms:alert ref="$form-resources/application-name/alert"/>
                                    </xforms:output>
                                </xhtml:div>
                                <xhtml:div>
                                    <xforms:output id="form-name-control" bind="form-name-bind"
                                                   class="fr-summary fr-search fr-static" incremental="true">
                                        <xforms:label ref="$form-resources/form-name/label"/>
                                        <xforms:alert ref="$form-resources/form-name/alert"/>
                                    </xforms:output>
                                </xhtml:div>
                                <xhtml:div>
                                    <xforms:trigger appearance="minimal">
                                        <xforms:label ref="$form-resources/edit-metadata/label"/>
                                        <xforms:action ev:event="DOMActivate">
                                            <!-- Copy data to editor instance -->
                                            <xforms:setvalue ref="instance('fb-metadata-instance')/application-name"
                                                             value="xxforms:bind('application-name-bind')"/>
                                            <xforms:setvalue ref="instance('fb-metadata-instance')/form-name"
                                                             value="xxforms:bind('form-name-bind')"/>
                                            <!-- Show and focus -->
                                            <xforms:setvalue ref="instance('fb-metadata-instance')/mode" value="'edit'"/>
                                            <xxforms:show dialog="fb-editor-metadata-dialog"/>
                                        </xforms:action>
                                    </xforms:trigger>
                                </xhtml:div>
                            </xhtml:div>
                        </xhtml:div>
                    </xhtml:div>
                </xhtml:div>
            </xhtml:dd>
            <xhtml:dt class="a-m-t"><xforms:output value="$form-resources/advanced/label"/></xhtml:dt>
            <xhtml:dd class="a-m-d">
                <xhtml:div class="bd">
                    <!-- Actions toolbox -->
                    <xhtml:div class="fb-tools">
                        <xhtml:div class="fb-tool">
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/schema">
                                <!-- Upload XML Schema -->
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/forms/orbeon/builder/images/schema.gif" alt=""/>
                                        <xhtml:span>
                                            <xforms:output value="if (exists($model/xs:schema)) then $form-resources/change-schema/label else $form-resources/upload-schema/label"/>
                                        </xhtml:span>
                                    </xforms:label>
                                    <xxforms:show ev:event="DOMActivate" if="$is-pe" dialog="fb-schema-upload-dialog"/>
                                    <xforms:dispatch ev:event="DOMActivate" if="not($is-pe)" target="fb-pe-dialog" name="fr-show"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/css">
                                <!-- Upload CSS -->
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/images/silk/css.png" alt=""/>
                                        <xhtml:span>
                                            <xforms:output value="if (xxforms:bind('css-attachment-bind') = '') then $form-resources/upload-css/label else $form-resources/change-css/label"/>
                                        </xhtml:span>
                                    </xforms:label>
                                    <xxforms:show ev:event="DOMActivate" dialog="fb-css-upload-dialog"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/pdf">
                                <!-- Upload PDF Template -->
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/pdf.png" alt=""/>
                                        <xhtml:span>
                                            <xforms:output value="if (xxforms:bind('pdf-attachment-bind') = '') then $form-resources/upload-pdf/label else $form-resources/change-pdf/label"/>
                                        </xhtml:span>
                                    </xforms:label>
                                    <xxforms:show ev:event="DOMActivate" if="$is-pe" dialog="fb-pdf-upload-dialog"/>
                                    <xforms:dispatch ev:event="DOMActivate" if="not($is-pe)" target="fb-pe-dialog" name="fr-show"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/view-source">
                                <!-- Show XML -->
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/view-xml.gif" alt=""/>
                                        <xhtml:span><xforms:output ref="$form-resources/show-source/label"/></xhtml:span>
                                    </xforms:label>
                                    <xxforms:show ev:event="DOMActivate" dialog="fb-xml-dialog"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/edit-source">
                                <!-- Edit Source -->
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/images/silk/xhtml.png" alt=""/>
                                        <xhtml:span><xforms:output ref="$form-resources/edit-source/label"/></xhtml:span>
                                    </xforms:label>
                                    <xxforms:show ev:event="DOMActivate" dialog="fb-source-editor-dialog"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/custom-xml">
                                <!-- Custom XML -->
                                <fb:custom-xml id="fb-custom-xml" form-ref="instance('fr-form-instance')" resources-ref="$form-resources"/>
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/images/silk/brick_edit.png" alt=""/>
                                        <xhtml:span><xforms:output ref="$form-resources/custom-xml/label"/></xhtml:span>
                                    </xforms:label>
                                    <xforms:dispatch ev:event="DOMActivate" name="fb-show-dialog" target="fb-custom-xml"/>
                                </xforms:trigger>
                            </xforms:group>
                            <xforms:group ref="instance('fb-metadata-instance')/toolbox/permissions">
                                <!-- Permissions -->
                                <fb:permissions id="fb-permissions" resources-ref="$form-resources"
                                    metadata-ref="instance('fr-form-instance')/xhtml:head/xforms:model/xforms:instance[@id = 'fr-form-metadata']/metadata"/>
                                <xforms:trigger>
                                    <xforms:label>
                                        <xhtml:img src="/apps/fr/style/images/silk/lock.png" alt=""/>
                                        <xhtml:span><xforms:output ref="$form-resources/permissions/label"/></xhtml:span>
                                    </xforms:label>
                                    <xforms:dispatch ev:event="DOMActivate" name="fb-show-dialog" target="fb-permissions"/>
                                </xforms:trigger>
                            </xforms:group>
                        </xhtml:div>
                    </xhtml:div>
                </xhtml:div>
            </xhtml:dd>
            <!-- To facilitate marking buttons read-only -->
            <xxforms:variable name="trigger" select="instance('fb-metadata-instance')/toolbox/services-actions" as="element()"/>
            <xforms:group>
                <xhtml:dt class="a-m-t"><xforms:output value="$form-resources/services-actions/label"/></xhtml:dt>
                <xhtml:dd class="a-m-d">
                    <xhtml:div class="bd">

                        <!-- Services -->
                        <xhtml:div class="fb-tools">
                            <xforms:group class="fb-hide-alert">
                                <xforms:label ref="$form-resources/http-services/label"/>
                                <!-- Repeat over existing services -->
                                <xhtml:ul>
                                    <xforms:repeat nodeset="$model/xforms:submission[ends-with(@id, '-submission') and tokenize(@class, '\s+') = 'fr-service']">
                                        <xxforms:variable name="current-submission" select="."/>
                                        <xhtml:li>
                                            <xxforms:variable name="submission-name" select="substring-before(@id, '-submission')"/>
                                            <xforms:trigger ref="$trigger" appearance="minimal">
                                                <xforms:label>
                                                    <xhtml:img src="/apps/fr/style/edit.gif" alt="{$form-resources/edit/label}" title="{$form-resources/edit/label}"/>
                                                </xforms:label>
                                                <xxforms:show ev:event="DOMActivate" dialog="fb-service-dialog">
                                                    <xxforms:context name="submission-name" select="$submission-name"/>
                                                </xxforms:show>
                                            </xforms:trigger>
                                            <xforms:trigger ref="$trigger" appearance="minimal" id="fb-submission-remove">
                                                <xforms:label>
                                                    <xforms:label><xhtml:img src="/apps/fr/style/images/silk/bin.png" alt="{$form-resources/remove/label}" title="{$form-resources/remove/label}"/></xforms:label>
                                                </xforms:label>
                                                <xforms:action ev:event="DOMActivate">
                                                    <!-- Ask confirmation -->
                                                    <xxforms:show dialog="fb-confirmation-dialog">
                                                        <xxforms:context name="fr:message"
                                                                         select="concat($form-resources/messages/delete-service, ' ''',
                                                                                     $submission-name,
                                                                                     '''?')"/>
                                                        <xxforms:context name="fr:confirmation-target" select="'fb-submission-remove'"/>
                                                    </xxforms:show>
                                                </xforms:action>
                                                <xforms:action ev:event="fb-confirmation-yes">
                                                    <!-- Delete stuff -->
                                                    <xforms:delete nodeset="$current-submission"/>
                                                    <xforms:delete nodeset="$model/xforms:instance[@id = concat($submission-name, '-instance')]"/>
                                                </xforms:action>
                                            </xforms:trigger>
                                            <xforms:output value="$submission-name"/>
                                        </xhtml:li>
                                    </xforms:repeat>
                                </xhtml:ul>
                                <xforms:group>
                                    <xforms:trigger ref="$trigger" appearance="minimal">
                                        <xforms:label>
                                            <xhtml:img src="/apps/fr/style/images/silk/add.png" alt=""/>
                                            <xhtml:span><xforms:output value="$form-resources/add/label"/></xhtml:span>
                                        </xforms:label>
                                        <xxforms:show ev:event="DOMActivate" if="$is-pe" dialog="fb-service-dialog"/>
                                        <xforms:dispatch ev:event="DOMActivate" if="not($is-pe)" target="fb-pe-dialog" name="fr-show"/>
                                    </xforms:trigger>
                                </xforms:group>
                            </xforms:group>
                        </xhtml:div>

                        <!-- Database services -->
                        <xhtml:div class="fb-tools">
                            <xforms:group class="fb-hide-alert">
                                <xforms:label ref="$form-resources/database-services/label"/>
                                <!-- Repeat over existing services -->
                                <xhtml:ul>
                                    <xforms:repeat nodeset="$model/xforms:submission[ends-with(@id, '-submission') and tokenize(@class, '\s+') = 'fr-database-service']">
                                        <xxforms:variable name="current-submission" select="."/>
                                        <xhtml:li>
                                            <xxforms:variable name="submission-name" select="substring-before(@id, '-submission')"/>
                                            <xforms:trigger ref="$trigger" appearance="minimal">
                                                <xforms:label>
                                                    <xhtml:img src="/apps/fr/style/edit.gif" alt="{$form-resources/edit/label}" title="{$form-resources/edit/label}"/>
                                                </xforms:label>
                                                <xxforms:show ev:event="DOMActivate" dialog="fb-database-service-dialog">
                                                    <xxforms:context name="submission-name" select="$submission-name"/>
                                                </xxforms:show>
                                            </xforms:trigger>
                                            <xforms:trigger ref="$trigger" appearance="minimal" id="fb-database-service-remove">
                                                <xforms:label>
                                                    <xforms:label><xhtml:img src="/apps/fr/style/images/silk/bin.png" alt="{$form-resources/remove/label}" title="{$form-resources/remove/label}"/></xforms:label>
                                                </xforms:label>
                                                <xforms:action ev:event="DOMActivate">
                                                    <!-- Ask confirmation -->
                                                    <xxforms:show dialog="fb-confirmation-dialog">
                                                        <xxforms:context name="fr:message"
                                                                         select="concat($form-resources/messages/delete-service, ' ''',
                                                                                     $submission-name,
                                                                                     '''?')"/>
                                                        <xxforms:context name="fr:confirmation-target" select="'fb-database-service-remove'"/>
                                                    </xxforms:show>
                                                </xforms:action>
                                                <xforms:action ev:event="fb-confirmation-yes">
                                                    <!-- Delete stuff -->
                                                    <xforms:delete nodeset="$current-submission"/>
                                                    <xforms:delete nodeset="$model/xforms:instance[@id = concat($submission-name, '-instance')]"/>
                                                </xforms:action>
                                            </xforms:trigger>
                                            <xforms:output value="$submission-name"/>
                                        </xhtml:li>
                                    </xforms:repeat>
                                </xhtml:ul>
                                <xforms:group>
                                    <xforms:trigger ref="$trigger" appearance="minimal">
                                        <xforms:label>
                                            <xhtml:img src="/apps/fr/style/images/silk/add.png" alt=""/>
                                            <xhtml:span><xforms:output value="$form-resources/add/label"/></xhtml:span>
                                        </xforms:label>
                                        <xxforms:show ev:event="DOMActivate" if="$is-pe" dialog="fb-database-service-dialog"/>
                                        <xforms:dispatch ev:event="DOMActivate" if="not($is-pe)" target="fb-pe-dialog" name="fr-show"/>
                                    </xforms:trigger>
                                </xforms:group>
                            </xforms:group>
                        </xhtml:div>

                        <!-- Actions -->
                        <xhtml:div class="fb-tools">
                            <xforms:group class="fb-hide-alert">
                                <xforms:label ref="$form-resources/actions/label"/>
                                <!-- Repeat over existing bindings -->
                                <xhtml:ul>
                                    <xforms:repeat nodeset="$model/xforms:action[ends-with(@id, '-binding')]">
                                        <xxforms:variable name="current-action" select="."/>
                                        <xhtml:li>
                                            <xxforms:variable name="binding-name" select="substring-before(@id, '-binding')"/>
                                            <xforms:trigger ref="$trigger" appearance="minimal">
                                                <xforms:label>
                                                    <xhtml:img src="/apps/fr/style/edit.gif" alt="{$form-resources/edit/label}" title="{$form-resources/edit/label}"/>
                                                </xforms:label>
                                                <xxforms:show ev:event="DOMActivate" dialog="fb-action-dialog">
                                                    <xxforms:context name="binding-name" select="$binding-name"/>
                                                </xxforms:show>
                                            </xforms:trigger>
                                            <xforms:trigger ref="$trigger" appearance="minimal" id="fb-binding-remove">
                                                <xforms:label>
                                                    <xforms:label><xhtml:img src="/apps/fr/style/images/silk/bin.png" alt="{$form-resources/remove/label}" title="{$form-resources/remove/label}"/></xforms:label>
                                                </xforms:label>
                                                <xforms:action ev:event="DOMActivate">
                                                    <!-- Ask confirmation -->
                                                    <xxforms:show dialog="fb-confirmation-dialog">
                                                        <xxforms:context name="fr:message"
                                                                         select="concat($form-resources/messages/delete-action, ' ''',
                                                                                     $binding-name,
                                                                                     '''?')"/>
                                                        <xxforms:context name="fr:confirmation-target" select="'fb-binding-remove'"/>
                                                    </xxforms:show>
                                                </xforms:action>
                                                <xforms:action ev:event="fb-confirmation-yes">
                                                    <!-- Delete stuff -->
                                                    <xforms:delete nodeset="$current-action"/>
                                                </xforms:action>
                                            </xforms:trigger>
                                            <xforms:output value="$binding-name"/>
                                        </xhtml:li>
                                    </xforms:repeat>
                                </xhtml:ul>
                                <xforms:group>
                                    <xforms:trigger ref="$trigger" appearance="minimal">
                                        <xforms:label>
                                            <xhtml:img src="/apps/fr/style/images/silk/add.png" alt=""/>
                                            <xhtml:span><xforms:output value="$form-resources/add/label"/></xhtml:span>
                                        </xforms:label>
                                        <xxforms:show ev:event="DOMActivate" if="$is-pe" dialog="fb-action-dialog"/>
                                        <xforms:dispatch ev:event="DOMActivate" if="not($is-pe)" target="fb-pe-dialog" name="fr-show"/>
                                    </xforms:trigger>
                                </xforms:group>
                            </xforms:group>
                        </xhtml:div>
                    </xhtml:div>
                </xhtml:dd>
            </xforms:group>
        </xhtml:dl>
        <!-- Orbeon Forms version -->
        <fr:version/>
    </xhtml:div>

    <!-- Dialog to tell the user that the feature is PE-only -->
    <fr:alert-dialog id="fb-pe-dialog">
        <fr:label ref="$form-resources/dialog-pe/dialog-title"/>
        <fr:message>
            <xforms:output value="xxforms:serialize($form-resources/dialog-pe/message/*[1], 'html')" mediatype="text/html"/>
        </fr:message>
        <fr:neutral-choice/>
    </fr:alert-dialog>

</xhtml:div>
