<element name="query"
         xmlns="http://relaxng.org/ns/structure/1.0"
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <element name="page-size">
        <data type="positiveInteger"/>
    </element>
    <element name="page-number">
        <data type="positiveInteger"/>
    </element>
    <element name="sort-column">
        <choice>
            <value>employee_id</value>
            <value>firstname</value>
            <value>lastname</value>
            <value>phone</value>
            <value>title</value>
            <value>age</value>
        </choice>
    </element>
    <element name="sort-order">
        <choice>
            <value>asc</value>
            <value>desc</value>
        </choice>
    </element>
</element>
