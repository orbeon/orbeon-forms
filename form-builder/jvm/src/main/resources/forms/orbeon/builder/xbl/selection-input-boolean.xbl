<xbl:xbl xmlns:xf="http://www.w3.org/2002/xforms"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
         xmlns:xxf="http://orbeon.org/oxf/xml/xforms"
         xmlns:xbl="http://www.w3.org/ns/xbl">

    <xbl:binding id="fb-input-boolean" element="xf|input:xxf-type('xs:boolean')">
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Single Checkbox with Label on Top</display-name>
            <display-name lang="es">Entrada Booleana</display-name>
            <display-name lang="fi" todo="true">Boolean-syöttäminen</display-name>
            <display-name lang="fr">Case à cocher unique avec libellé en dessus</display-name>
            <display-name lang="ru" todo="true">[Boolean Input]</display-name>
            <display-name lang="de" todo="true">Boolsche Eingabe</display-name>
            <display-name lang="it" todo="true">Campo boolean</display-name>
            <display-name lang="nl" todo="true">Booleaanse invoer</display-name>
            <display-name lang="sv" todo="true">Booleskt värde</display-name>
            <display-name lang="pt" todo="true">Entrada Booleana</display-name>
            <toolbox show="false"/>
            <icon>
                <icon-class>fa fa-fw fa-check-square-o</icon-class>
            </icon>
            <templates>
                <bind type="xf:boolean"/>
                <instance>false</instance>
                <view>
                    <xf:input id="" ref="" xmlns="">
                        <xf:label ref=""/>
                        <xf:hint ref=""/>
                        <xf:help ref=""/>
                        <xf:alert ref=""/>
                    </xf:input>
                </view>
            </templates>
        </metadata>
    </xbl:binding>

</xbl:xbl>
