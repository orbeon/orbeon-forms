<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="document-info">
            <optional>
                <element name="document-id">
                    <data type="string"/>
                </element>
                <element name="document-date">
                    <data type="dateTime"/>
                </element>
                <element name="document">
                    <ref name="anyElement"/>
                </element>
            </optional>
        </element>
    </start>

    <define name="anyElement">
        <element>
            <anyName/>
            <zeroOrMore>
                <choice>
                    <attribute>
                        <anyName/>
                    </attribute>
                    <text/>
                    <ref name="anyElement"/>
                </choice>
            </zeroOrMore>
        </element>
    </define>

</grammar>
