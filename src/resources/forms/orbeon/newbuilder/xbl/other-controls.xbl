    <xbl:binding id="fb-trigger" element="xforms|trigger">
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Browser Button</display-name>
            <display-name lang="fr">Bouton navigateur</display-name>
            <display-name lang="ru">Кнопка браузера</display-name>
            <icon lang="en">
                <small-icon>/forms/orbeon/newbuilder/images/button.png</small-icon>
                <large-icon>/forms/orbeon/newbuilder/images/button.png</large-icon>
            </icon>
            <template>
                <xforms:trigger id="" xmlns="">
                    <xforms:label ref=""/>
                    <xforms:help ref=""/>
                    <xforms:hint ref=""/>
                    <xforms:alert ref="$fr-resources/detail/labels/alert"/>
                </xforms:trigger>
            </template>
        </metadata>
    </xbl:binding>

    <xbl:binding id="fb-trigger-minimal" element="xforms|trigger[appearance='minimal']">
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Link Button</display-name>
            <display-name lang="fr">Bouton lien</display-name>
            <display-name lang="ru">Кнопка-ссылка</display-name>
