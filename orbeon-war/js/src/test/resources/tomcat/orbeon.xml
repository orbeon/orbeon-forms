<?xml version="1.0" encoding="UTF-8"?>
<Context
    docBase="/usr/local/tomcat/webapps/orbeon"
    path="/orbeon"
    allowLinking="true">

    <!-- Add test-resources to the Java classpath with precedence over JARs, so `Ehcache2Provider` can load
         `/config/ehcache.xml` via `getClass.getResource()`. -->
    <Resources allowLinking="true">
        <PreResources
            className="org.apache.catalina.webresources.DirResourceSet"
            base="/usr/local/tomcat/webapps/orbeon/WEB-INF/test-resources"
            webAppMount="/WEB-INF/classes"
            internalPath="/"/>
    </Resources>

    <Parameter
        override="false"
        name="oxf.resources.priority.0"
        value="org.orbeon.oxf.resources.FilesystemResourceManagerFactory"/>
    <Parameter
        override="false"
        name="oxf.resources.priority.0.oxf.resources.filesystem.sandbox-directory"
        value="/usr/local/tomcat/webapps/orbeon/WEB-INF/test-resources"/>

</Context>