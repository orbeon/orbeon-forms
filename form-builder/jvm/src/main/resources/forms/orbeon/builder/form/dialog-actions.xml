<xxf:dialog xmlns:xh="http://www.w3.org/1999/xhtml"
      xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:xxf="http://orbeon.org/oxf/xml/xforms"
      xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
      xmlns:fb="http://orbeon.org/oxf/xml/form-builder"
      xmlns:frf="java:org.orbeon.oxf.fr.FormRunner"
      xmlns:saxon="http://saxon.sf.net/"
      xmlns:utils="java:org.orbeon.oxf.util.StringUtils"

      id="fb-action-dialog"
      class="fb-action-dialog"
      level="modal"
      close="false"
      draggable="true"
      model="fb-actions-editor-model">

    <xf:label model="fr-form-model" ref="$form-resources/dialog-actions/label"/>
    <xf:var   model="fr-form-model" name="form-resources" value="$form-resources"/>

    <xf:var name="instance" value="instance('fb-actions-editor-instance')"/>
    <xf:var name="body"     value="$body" model="fr-form-model"/>

    <xf:var
        name="all-available-services"
        value="
            $model/fb:submission[
                ends-with(@id, '-submission') and not(
                    @id = (
                        ../fb:action[
                            ends-with(@id, '-binding') and
                            @id != concat($instance/initial-name, '-binding')
                        ]/xf:action[1]/xf:send/@submission
                    )
                )
            ]"/>

    <xf:var name="action1"  value="$instance/fb:action/xf:action[1]"/>
    <xf:var name="observer" value="$action1/@ev:observer"/>
    <xf:var name="event"    value="$action1/@fb:event"/>

    <!-- Initialize dialog -->
    <xf:action event="xxforms-dialog-open">
        <xf:var name="instance"     value="instance('fb-actions-editor-instance')"/>
        <xf:var name="binding-name" value="event('binding-name')"/>

        <!-- Clear working values -->
        <xf:setvalue ref="$instance/name"/>
        <xf:setvalue ref="$instance/initial-name"/>
        <xf:delete   ref="$instance/fb:action"/>

        <!-- Empty binding if no binding id passed -->
        <xf:action if="not($binding-name)">
            <xf:insert ref="$instance/*" origin="instance('fb-binding-template')"/>
        </xf:action>
        <!-- Otherwise copy binding -->
        <xf:action if="$binding-name">
            <xf:var name="binding-id"                 value="concat($binding-name, '-binding')"/>
            <xf:setvalue ref="$instance/name"         value="$binding-name"/>
            <xf:setvalue ref="$instance/initial-name" value="$binding-name"/>

            <xf:insert ref="$instance/*" origin="$model/fb:action[@id = $binding-id]"/>

            <!-- Insert condition on action if missing -->
            <xf:var name="action1" value="$instance/fb:action/xf:action[1]"/>
            <xf:insert
                if="not(exists($action1/@if))"
                context="$action1"
                origin="xf:attribute('if', 'true()')"/>
        </xf:action>
    </xf:action>

    <fr:tabbable class="fb-dialog-form-settings-fields">
        <fr:tab>
            <xf:label ref="$form-resources/dialog-actions/general-settings"/>

            <fr:grid id="fb-action-grid">
                <xh:tr>
                    <xh:td>
                        <!-- Action name -->
                        <xf:input ref="name" id="fb-binding-name-input" incremental="true">
                            <xf:label ref="$form-resources/dialog-actions/service-name/label"/>
                            <xf:hint ref="$form-resources/dialog-actions/service-name/hint"/>
                        </xf:input>
                    </xh:td>
                    <xh:td>
                        <!-- Condition -->
                        <xf:select1 ref="$action1/@if">
                            <xf:label ref="$form-resources/dialog-actions/event-condition/label"/>
                            <xf:itemset ref="$form-resources/dialog-actions/event-condition/item">
                                <xf:label ref="label"/>
                                <xf:value ref="value"/>
                            </xf:itemset>
                        </xf:select1>
                    </xh:td>
                </xh:tr>
                <xh:tr>
                    <xh:td colspan="2">
                        <xf:group ref="$observer" class="fb-action-phrase-outer">
                            <xf:label value="$form-resources/dialog-actions/observer-type/label"/>

                            <xh:div class="fb-action-phrase">
                                <xf:select1 ref="$observer" id="fb-action-react-to" appearance="minimal" class="fb-action-observer">
                                    <xf:itemset ref="$form-resources/dialog-actions/observer-type/item">
                                        <xf:label ref="label"/>
                                        <xf:value
                                            ref="
                                                if (@id = 0) then
                                                    if ($observer = 'fr-form-model') then '' else string($observer)
                                                else if (@id = 1) then
                                                    'fr-form-model'
                                                else
                                                    error()"/>
                                    </xf:itemset>
                                    <xf:alert/>

                                    <xf:setvalue event="xforms-select" ref="$event"/>

                                    <!--<xf:action event="xforms-select" if="event('xxf:item-value') = 'fr-form-model'">-->
                                        <!--<xf:setvalue event="xforms-select" ref="$event"/>-->
                                    <!--</xf:action>-->

                                </xf:select1>

                                <xf:select1 ref="$observer[. != 'fr-form-model']" appearance="search" class="fb-action-control">
                                    <!-- TODO: See `parameters-editor.xbl` for newer implementation. -->
                                    <xf:itemset ref="$body//(*[@ref or @bind or self::xf:trigger or self::fr:button])[ends-with(@id, '-control')]">
                                        <!-- Try to build a reasonably user-friendly label -->
                                        <xf:label
                                            value="
                                                utils:truncateWithEllipsis(
                                                    for $name in frf:controlNameFromId(@id)
                                                    return
                                                        concat(
                                                            $current-resources/*[name() = $name]/label,
                                                            ' (',
                                                            $name,
                                                            ')'
                                                        ),
                                                    60,
                                                    6
                                                )"/>
                                        <xf:value value="@id"/>
                                    </xf:itemset>
                                    <xf:alert/>
                                </xf:select1>

                                <xf:select1 ref="$event" appearance="dropdown" class="fb-action-event">
                                    <xf:itemset
                                        ref="
                                            $form-resources/dialog-actions/event-type/item[
                                                @id = (
                                                    if ($observer = 'fr-form-model') then
                                                        (3 to 5)
                                                    else
                                                        (0 to 2)
                                                )
                                            ]">
                                        <xf:label ref="label"/>
                                        <xf:value
                                            ref="
                                                if (@id = 0) then
                                                    'xforms-value-changed'
                                                else if (@id = 1) then
                                                    'xforms-value-changed xforms-enabled'
                                                else if (@id = 2) then
                                                    'DOMActivate'
                                                else if (@id = 3) then
                                                    'fr-run-form-load-action-after-controls'
                                                else if (@id = 4) then
                                                    'fr-run-form-load-action-before-data'
                                                else if (@id = 5) then
                                                    'fr-run-form-load-action-after-data'
                                                else
                                                    error()"/>
                                    </xf:itemset>
                                    <xf:alert/>
                                </xf:select1>
                            </xh:div>
                        </xf:group>
                    </xh:td>
                </xh:tr>
                <xh:tr>
                    <xh:td>
                        <!-- Service to Call -->
                        <fr:dropdown-select1 ref="$action1/xf:send/@submission" id="fb-bindings-submission-select">
                            <xf:label ref="$form-resources/dialog-actions/service-to-call/label"/>
                            <xf:hint ref="$form-resources/dialog-actions/service-to-call/hint"/>
                            <!-- Show submissions that are NOT yet used by an action. See https://github.com/orbeon/orbeon-forms/issues/397 -->
                            <xf:itemset ref="$all-available-services">
                                <xf:label value="substring-before(@id, '-submission')"/>
                                <xf:value value="@id"/>
                            </xf:itemset>
                        </fr:dropdown-select1>
                    </xh:td>
                    <xh:td/>
                </xh:tr>
            </fr:grid>

        </fr:tab>
        <fr:tab>
            <xf:label ref="$form-resources/dialog-actions/service-request-actions"/>

            <xf:group ref="$instance/fb:action" appearance="xxf:internal">

                <!-- Set Service Request Values -->

                <xf:group ref="
                    .[
                        exists(
                            $all-available-services[xxf:has-class('fr-service')]
                        )
                    ]/xf:action[
                        @fb:event = 'xforms-submit'
                    ]/xf:action">

                    <xf:label ref="$form-resources/dialog-actions/request-parameters/label"/>

                    <xf:var
                        name="request-actions-container"
                        value="."/>
                    <xf:var
                        name="template"
                        value="instance('fb-binding-action-template')/xf:action[@class = 'fr-set-service-value-action']"/>

                    <fr:dnd-repeat
                        ref="
                            let $actions :=
                                xf:action[@class = 'fr-set-service-value-action']
                            return
                                if (exists($actions)) then
                                    $actions
                                else
                                    $template">

                        <xf:var name="current-action"    value="."/>
                        <xf:var name="action-count"      value="count($request-actions-container/xf:action[@class = 'fr-set-service-value-action'])"/>
                        <xf:var name="can-remove-action" value="$action-count gt 0"/>
                        <xh:div
                            class="{
                                'fb-action-iteration',
                                 'xforms-dnd-item',
                                 'xforms-dnd-moves'[$action-count gt 1]
                            }">

                            <xh:div class="fb-action-options">

                                <xf:select1
                                    appearance="search"
                                    ref="(*:variable | *:var)[@name = 'control-name']/(@value | @select)[1]"
                                    class="fb-action-option-2-col-span-1">
                                    <!-- TODO: See `parameters-editor.xbl` for newer implementation. -->
                                    <xf:itemset ref="$body//*[(@ref or @bind) and ends-with(@id, '-control')]">
                                        <!-- Try to build a reasonably user-friendly label -->
                                        <xf:label
                                            value="
                                                utils:truncateWithEllipsis(
                                                    for $name in frf:controlNameFromId(@id)
                                                    return
                                                        concat(
                                                            $current-resources/*[name() = $name]/label,
                                                            ' (',
                                                            $name,
                                                            ')'
                                                        ),
                                                    60,
                                                    6
                                                )"/>
                                        <xf:value value="concat('''', frf:controlNameFromId(@id), '''')"/>
                                    </xf:itemset>
                                </xf:select1>

                                <xf:input
                                    ref="(*:variable | *:var)[@name = 'path']/(@value | @select)[1]"
                                    incremental="true"
                                    class="fb-action-option-2-col-span-1">
                                    <xf:label ref="$form-resources/dialog-actions/destination-xpath/label" appearance="minimal"/>
                                </xf:input>

                            </xh:div>
                            <xh:div class="fb-action-buttons">
                                <xh:i class="fa fa-fw fa-bars fb-action-grab"/>
                                <xf:trigger
                                    appearance="minimal"
                                    ref="if ($can-remove-action) then $request-actions-container else ''">
                                    <xf:label><xh:i class="fa fa-fw fa-minus-circle"/></xf:label>
                                    <xf:action event="DOMActivate">
                                        <xf:delete ref="$current-action"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger appearance="minimal">
                                    <xf:label><xh:i class="fa fa-fw fa-plus-circle"/></xf:label>
                                    <xf:action event="DOMActivate">
                                        <xf:insert
                                            context="$request-actions-container"
                                            ref="$current-action[parent::* is $request-actions-container]"
                                            position="after"
                                            origin="$template"/>
                                    </xf:action>
                                </xf:trigger>
                            </xh:div>
                        </xh:div>
                    </fr:dnd-repeat>

                </xf:group>

                <!-- Set Database Service Parameters -->
                <xf:group ref="
                    .[
                        exists(
                            $all-available-services[xxf:has-class('fr-database-service')]
                        )
                    ]/xf:action[
                        @fb:event = 'xforms-submit'
                    ]/xf:action">

                    <xf:label ref="$form-resources/dialog-actions/request-database-parameter/label"/>

                    <xf:var
                        name="request-actions-container"
                        value="."/>
                    <xf:var
                        name="template"
                        value="instance('fb-binding-action-template')/xf:action[@class = 'fr-set-database-service-value-action']"/>

                    <fr:dnd-repeat
                        ref="
                            let $actions :=
                                xf:action[@class = 'fr-set-database-service-value-action']
                            return
                                if (exists($actions)) then
                                    $actions
                                else
                                    $template">

                        <xf:var name="current-action"    value="."/>
                        <xf:var name="action-count"      value="count($request-actions-container/xf:action[@class = 'fr-set-database-service-value-action'])"/>
                        <xf:var name="can-remove-action" value="$action-count gt 0"/>
                        <xh:div
                            class="{
                                'fb-action-iteration',
                                 'xforms-dnd-item',
                                 'xforms-dnd-moves'[$action-count gt 1]
                            }">

                            <xh:div class="fb-action-options">

                                <xf:select1
                                    appearance="search"
                                    ref="(*:variable | *:var)[@name = 'control-name']/(@value | @select)[1]"
                                    class="fb-action-option-2-col-span-1">
                                    <!-- TODO: See `parameters-editor.xbl` for newer implementation. -->
                                    <xf:itemset ref="$body//*[(@ref or @bind) and ends-with(@id, '-control')]">
                                        <!-- Try to build a reasonably user-friendly label -->
                                        <xf:label
                                            value="
                                                utils:truncateWithEllipsis(
                                                    for $name in frf:controlNameFromId(@id)
                                                    return
                                                        concat(
                                                            $current-resources/*[name() = $name]/label,
                                                            ' (',
                                                            $name,
                                                            ')'
                                                        ),
                                                    60,
                                                    6
                                                )"/>
                                        <xf:value value="concat('''', frf:controlNameFromId(@id), '''')"/>
                                    </xf:itemset>
                                </xf:select1>

                                <xf:input
                                    ref="(*:variable | *:var)[@name = 'parameter']/(@value | @select)[1]"
                                    incremental="true"
                                    class="fb-action-option-2-col-span-1">
                                    <xf:label ref="$form-resources/dialog-actions/parameter-number/label" appearance="minimal"/>
                                </xf:input>

                            </xh:div>
                            <xh:div class="fb-action-buttons">
                                <xh:i class="fa fa-fw fa-bars fb-action-grab"/>
                                <xf:trigger
                                    appearance="minimal"
                                    ref="if ($can-remove-action) then $request-actions-container else ''">
                                    <xf:label><xh:i class="fa fa-fw fa-minus-circle"/></xf:label>
                                    <xf:action event="DOMActivate">
                                        <xf:delete ref="$current-action"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger appearance="minimal">
                                    <xf:label><xh:i class="fa fa-fw fa-plus-circle"/></xf:label>
                                    <xf:action event="DOMActivate">
                                        <xf:insert
                                            context="$request-actions-container"
                                            ref="$current-action[parent::* is $request-actions-container]"
                                            position="after"
                                            origin="$template"/>
                                    </xf:action>
                                </xf:trigger>
                            </xh:div>
                        </xh:div>
                    </fr:dnd-repeat>
                </xf:group>
            </xf:group>
        </fr:tab>

        <fr:tab>
            <xf:label ref="$form-resources/dialog-actions/service-response-actions"/>

            <!-- Q: Should be consistent with actions.xsl to identify selection controls based on name? -->
            <xf:var
                name="controls-with-itemset"
                value="$body//*[(@ref or @bind) and ends-with(@id, '-control') and exists(xf:itemset)]"/>

            <xf:var
                name="response-actions-container"
                value="$instance/fb:action/xf:action[@fb:event = 'xforms-submit-done']"/>

            <xf:group ref="$response-actions-container">
                <fr:dnd-repeat
                    ref="
                        let $actions :=
                            xf:action[
                                @class = (
                                    'fr-set-control-value-action',
                                    'fr-itemset-action',
                                    'fr-save-to-dataset-action'
                                )
                            ]
                        return
                            if (exists($actions)) then
                                $actions
                            else
                                instance('fb-binding-action-template')/xf:action[@class = 'fr-set-control-value-action']">

                    <xf:var name="current-action"    value="."/>
                    <xf:var name="action-count"      value="count($response-actions-container/xf:action)"/>
                    <xf:var name="can-remove-action" value="$action-count gt 0"/>

                    <xh:div
                        class="{
                            'fb-action-iteration',
                             'xforms-dnd-item',
                             'xforms-dnd-moves'[$action-count gt 1]
                        }">

                        <xh:div class="fb-action-options">

                            <xf:select1 ref="@class" class="fb-action-option-3-col-span-1">
                                <xf:itemset
                                    ref=".[
                                        context() = 'fr-set-control-value-action' or
                                        not(
                                            $event = ('fr-run-form-load-action-before-data', 'fr-run-form-load-action-after-data')
                                        )
                                    ]">
                                    <xf:label ref="$form-resources/dialog-actions/set-control-value"/>
                                    <xf:value>fr-set-control-value-action</xf:value>
                                </xf:itemset>
                                <xf:itemset
                                    ref=".[
                                        exists($controls-with-itemset) and (
                                            context() = 'fr-itemset-action' or
                                            not(
                                                $event = ('fr-run-form-load-action-before-data', 'fr-run-form-load-action-after-data')
                                            )
                                        )
                                    ]">
                                    <xf:label ref="$form-resources/dialog-actions/set-control-itemset"/>
                                    <xf:value>fr-itemset-action</xf:value>
                                </xf:itemset>
                                <xf:item>
                                    <xf:label ref="$form-resources/dialog-actions/save-to-dataset"/>
                                    <xf:value>fr-save-to-dataset-action</xf:value>
                                </xf:item>

                                <xf:action event="xforms-select">
                                    <xf:delete ref="$current-action/(@class, *)"/>
                                    <xf:insert
                                        context="$current-action"
                                        origin="instance('fb-binding-action-template')/xf:action[@class = event('xxf:item-value')]/(@class, *)"/>
                                </xf:action>

                            </xf:select1>

                            <!-- `xxf:xforms11-switch="true"` is for dropdowns in hidden cases to be non-relevant -->
                            <xf:switch caseref="@class" xxf:xforms11-switch="true">
                                <xf:case value="'fr-set-control-value-action'">
                                    <xf:select1
                                        id="fb-choose-any-control"
                                        appearance="search"
                                        ref="(*:variable | *:var)[@name = 'control-name']/(@value | @select)[1]"
                                        class="fb-action-option-3-col-span-1">
                                        <xf:label ref="$form-resources/dialog-actions/destination-control/label" class="xforms-hidden"/>
                                        <!-- TODO: See `parameters-editor.xbl` for newer implementation. -->
                                        <xf:itemset ref="$body//*[(@ref or @bind) and ends-with(@id, '-control')]">
                                            <!-- Try to build a reasonably user-friendly label -->
                                            <xf:label
                                                value="
                                                    utils:truncateWithEllipsis(
                                                        for $name in frf:controlNameFromId(@id)
                                                            return concat($current-resources/*[name() = $name]/label, ' (', $name, ')'),
                                                        60,
                                                        6
                                                    )"/>
                                            <xf:value value="concat('''', frf:controlNameFromId(@id), '''')"/>
                                        </xf:itemset>
                                    </xf:select1>
                                    <xf:textarea
                                        ref="(*:variable | *:var)[@name = 'control-value']/(@value | @select)[1]"
                                        incremental="true"
                                        class="fb-action-option-3-col-span-1">
                                        <xf:label ref="$form-resources/dialog-actions/source-xpath/label" appearance="minimal"/>
                                    </xf:textarea>
                                </xf:case>
                                <xf:case value="'fr-itemset-action'">
                                    <!-- Only list selection controls -->
                                    <xf:select1
                                        id="fb-choose-selection-control"
                                        appearance="search"
                                        ref="(*:variable | *:var)[@name = 'control-name']/(@value | @select)[1]"
                                        class="fb-action-option-3-col-span-1">
                                        <xf:label ref="$form-resources/dialog-actions/destination-selection-control/label" class="xforms-hidden"/>
                                        <xf:itemset ref="$controls-with-itemset">
                                            <!-- Try to build a reasonably user-friendly label -->
                                            <xf:label value="for $name in frf:controlNameFromId(@id) return concat($current-resources/*[name() = $name]/label, ' (', $name, ')')"/>
                                            <xf:value value="concat('''', frf:controlNameFromId(@id), '''')"/>
                                        </xf:itemset>
                                    </xf:select1>
                                    <xh:div class="fb-action-option-3-col-span-1">
                                        <xf:textarea ref="(*:variable | *:var)[@name = 'response-items']/(@value | @select)[1]" id="fb-actions-items" incremental="true" class="fb-action-xpath">
                                            <xf:label ref="$form-resources/dialog-actions/items/label" appearance="minimal"/>
                                            <xf:hint ref="$form-resources/dialog-actions/items/hint"/>
                                        </xf:textarea>
                                        <xf:input ref=".//(*:variable | *:var)[@name = 'item-label']/(@value | @select)[1]" id="fb-actions-label" incremental="true" class="fb-action-xpath">
                                            <xf:label ref="$form-resources/dialog-actions/item-label/label" appearance="minimal"/>
                                            <xf:hint ref="$form-resources/dialog-actions/item-label/hint"/>
                                        </xf:input>
                                        <xf:input ref=".//(*:variable | *:var)[@name = 'item-value']/(@value | @select)[1]" id="fb-actions-value" incremental="true" class="fb-action-xpath">
                                            <xf:label ref="$form-resources/dialog-actions/item-value/label" appearance="minimal"/>
                                            <xf:hint ref="$form-resources/dialog-actions/item-value/hint"/>
                                        </xf:input>
                                    </xh:div>
                                </xf:case>
                                <xf:case value="'fr-save-to-dataset-action'">
                                    <xf:input ref="xf:var[@name = 'dataset-name']" class="fb-action-option-3-col-span-2">
                                        <xf:label ref="$form-resources/dialog-actions/dataset-name" appearance="minimal"/>
                                    </xf:input>
                                </xf:case>
                            </xf:switch>

                        </xh:div>

                        <xh:div class="fb-action-buttons">
                            <xh:i class="fa fa-fw fa-bars fb-action-grab"/>
                            <xf:trigger
                                appearance="minimal"
                                ref="if ($can-remove-action) then $response-actions-container else ''">
                                <xf:label><xh:i class="fa fa-fw fa-minus-circle"/></xf:label>
                                <xf:action event="DOMActivate">
                                    <xf:delete ref="$current-action"/>
                                </xf:action>
                            </xf:trigger>
                            <xf:trigger appearance="minimal">
                                <xf:label><xh:i class="fa fa-fw fa-plus-circle"/></xf:label>
                                <xf:action event="DOMActivate">
                                    <xf:insert
                                        context="$response-actions-container"
                                        ref="$current-action[parent::* is $response-actions-container]"
                                        position="after"
                                        origin="instance('fb-binding-action-template')/xf:action[@class = $current-action/@class]"/>
                                </xf:action>
                            </xf:trigger>
                        </xh:div>

                    </xh:div>
                </fr:dnd-repeat>
            </xf:group>

        </fr:tab>
    </fr:tabbable>

    <xh:div class="fr-dialog-buttons">
        <xf:group>
            <xh:div class="pull-left">
                <!-- Delete button -->
                <xf:trigger ref="$instance/delete-trigger" appearance="xxf:danger" id="fb-action-delete">
                    <xf:label>
                        <xf:output value="$form-resources/remove/label"/>
                    </xf:label>

                    <xf:action event="DOMActivate">
                        <!-- Ask confirmation -->
                        <xxf:show dialog="fb-confirmation-dialog">
                            <xf:property
                                name="fr:message"
                                value="
                                    concat(
                                        $form-resources/messages/delete-service,
                                        ' ''',
                                        $instance/name,
                                        '''?'
                                    )"/>
                            <xf:property
                                name="fr:confirmation-target"
                                value="'fb-action-delete'"/>
                        </xxf:show>
                    </xf:action>
                    <xf:action event="fb-confirmation-yes">
                        <!-- Delete stuff and close dialog -->
                        <xf:delete ref="$model/fb:action[@id = concat($instance/initial-name, '-binding')]"/>
                        <xxf:hide dialog="fb-action-dialog"/>
                    </xf:action>
                </xf:trigger>
            </xh:div>
            <!-- Test button -->
            <xf:trigger ref="$instance/save-test-trigger[false()]">
                <xf:label>
                    <xf:output value="$form-resources/dialog-actions/test/label"/>
                </xf:label>

                <!-- Test submission -->
                <xf:action event="DOMActivate">
                    <!-- TODO-->
                </xf:action>
            </xf:trigger>
            <!-- Save button -->
            <xf:trigger ref="$instance/save-test-trigger" id="fb-actions-save" appearance="xxf:primary">
                <xf:label>
                    <xf:output value="$form-resources/dialog-actions/save/label"/>
                </xf:label>
                <!-- Save changes to form -->
                <xf:action event="DOMActivate">

                    <!-- Delete existing binding if any -->
                    <xf:delete ref="$model/fb:action[@id = concat($instance/initial-name, '-binding')]"/>

                    <!-- Insert new binding -->
                    <xf:insert context="$model" ref="*" origin="$instance/fb:action[1]"/>

                    <!-- Hide dialog -->
                    <xxf:hide dialog="fb-action-dialog"/>
                </xf:action>
            </xf:trigger>
            <xf:output value="$form-resources/or/label"/>
            <xf:trigger appearance="minimal">
                <xf:label>
                    <xf:output value="$form-resources/cancel/label"/>
                </xf:label>
                <!-- Hide dialog -->
                <xxf:hide event="DOMActivate" dialog="fb-action-dialog"/>
            </xf:trigger>
        </xf:group>

        <!--<fr:xforms-inspector/>-->

    </xh:div>

    <!-- Model for the bindings editor -->
    <xf:model id="fb-actions-editor-model">

        <xf:var name="fb-lang"           value="xxf:instance('fb-language-instance')"/>
        <xf:var name="model"             value="xxf:instance('fb-form-instance')/xh:head/xf:model[@id = 'fr-form-model']"/>
        <xf:var name="resources"         value="$model/xf:instance[@id = 'fr-form-resources']/*"/>
        <xf:var name="current-resources" value="$resources/resource[@xml:lang = $fb-lang]"/>

        <xf:instance id="fb-actions-editor-instance">
            <bindings-editor valid="true">
                <name/>
                <initial-name/>
                <instance-id/>
                <delete-trigger/>
                <save-test-trigger/>
                <fb:action/>
            </bindings-editor>
        </xf:instance>

        <!-- Enable/disable trigger -->
        <xf:setvalue event="xxforms-invalid" observer="fb-actions-editor-instance" ref="@valid">false</xf:setvalue>
        <xf:setvalue event="xxforms-valid"   observer="fb-actions-editor-instance" ref="@valid">true</xf:setvalue>

        <xf:var
            name="form-load-actions"
            value="
                'fr-run-form-load-action-before-data',
                'fr-run-form-load-action-after-data',
                'fr-run-form-load-action-after-controls'
            "/>

        <xf:bind ref="instance('fb-actions-editor-instance')">

            <!-- NOTE: Considered restricting with `matches(., '^[A-Za-z0-9\-_]+$')`, but do we need to? For example
                 action names with accented characters could be ok. -->
            <xf:bind
                ref="name"
                type="xs:NCName"
                required="true()"
                xxf:whitespace="trim"
                constraint="
                    . = ../initial-name) or
                    not(../xf:action[1]/@id = $model/fb:action/@id"/>

            <xf:bind ref="instance-id" calculate="concat(../name, '-instance')"/>

            <xf:bind ref="fb:action">
                <!-- Action id -->
                <xf:bind ref="@id" calculate="concat(../../name, '-binding')"/>
                <!-- Action that triggers the submission -->
                <xf:bind ref="xf:action[1]">
                    <xf:bind ref="@fb:event"    required="true()" name="event"/>
                    <xf:bind ref="@ev:observer" required="true()"/>
                    <xf:bind name="submission-bind" ref="xf:send/@submission" required="true()"/>
                </xf:bind>
                <!-- xforms-submit -->
                <xf:bind ref="xf:action[@fb:event = 'xforms-submit']">
                    <xf:bind ref="@ev:observer" calculate="$submission-bind"/>

                    <xf:bind
                        ref="(*:variable | *:var)[@name = 'request-instance-name']/(@value | @select)[1]"
                        calculate="concat('''', substring-before($submission-bind, '-submission'), '-instance''')"
                        required="true()"/>

                    <xf:bind ref="xf:action/xf:action[@class = ('fr-set-database-service-value-action', 'fr-set-service-value-action')]">
                        <xf:bind ref="(*:variable | *:var)/(@value | @select)[1]" required="true()"/>
                    </xf:bind>
                </xf:bind>
                <!-- xforms-submit-done -->
                <xf:bind ref="xf:action[@fb:event = 'xforms-submit-done']">
                    <xf:bind ref="@ev:observer" calculate="$submission-bind"/>
                    <!-- Setvalue actions -->
                    <xf:bind ref="xf:action[@class = 'fr-set-control-value-action']">
                        <xf:bind
                            ref="@class"
                            constraint="not($event = ('fr-run-form-load-action-before-data', 'fr-run-form-load-action-after-data'))"/>
                        <xf:bind ref="(*:variable | *:var)/(@value | @select)[1]" required="true()">
                            <xf:bind
                                ref=".[../@name = ('control-value')]"
                                xxf:whitespace="trim"
                                type="xxf:xpath2"
                            />
                        </xf:bind>
                    </xf:bind>
                    <!-- Itemset actions -->
                    <xf:bind ref="xf:action[@class = 'fr-itemset-action']">
                        <xf:bind
                            ref="@class"
                            constraint="not($event = ('fr-run-form-load-action-before-data', 'fr-run-form-load-action-after-data'))"/>
                        <xf:bind ref=".//(*:variable | *:var)/(@value | @select)[1]" required="true()">
                            <xf:bind
                                ref=".[../@name = ('response-items', 'item-label', 'item-value')]"
                                xxf:whitespace="trim"
                                type="xxf:xpath2"
                            />
                        </xf:bind>
                    </xf:bind>
                    <!-- Save to dataset -->
                    <xf:bind ref="xf:action[@class = 'fr-save-to-dataset-action']">
                        <xf:bind
                            ref="xf:var[@name = 'dataset-name']"
                            required="true()"
                            xxf:whitespace="trim"
                            type="xs:NCName"
                        />
                    </xf:bind>
                </xf:bind>
            </xf:bind>
            <xf:bind ref="delete-trigger" relevant="xxf:non-blank(../initial-name)"/>
            <xf:bind ref="save-test-trigger" readonly="../@valid = 'false'"/>
        </xf:bind>

        <!-- Template for a given binding -->
        <xf:instance id="fb-binding-template" xxf:readonly="true" xxf:exclude-result-prefixes="xh exf xsi xi xxi fr fb saxon xbl exforms">
            <fb:action id="">
                <xf:action fb:event="" ev:observer="" if="true()">
                    <xf:send submission="SET ME"/>
                </xf:action>
                <xf:action fb:event="xforms-submit" ev:observer="SET ME">
                    <xf:var name="request-instance-name" value="SET ME"/>
                    <xf:action/>
                </xf:action>
                <xf:action fb:event="xforms-submit-done" ev:observer="SET ME"/>
            </fb:action>
        </xf:instance>

        <!-- Template for actions -->
        <!-- NOTE: The implementation of individual actions is now in actions.xsl. -->
        <xf:instance id="fb-binding-action-template" xxf:readonly="true">
            <action>
                <!-- Set service value -->
                <xf:action class="fr-set-service-value-action">
                    <xf:var name="control-name" value=""/>
                    <xf:var name="path" value=""/>
                </xf:action>
                <!-- Set database service value -->
                <xf:action class="fr-set-database-service-value-action">
                    <xf:var name="control-name" value=""/>
                    <xf:var name="parameter" value=""/>
                </xf:action>
                <!-- Set control value -->
                <xf:action class="fr-set-control-value-action">
                    <xf:var name="control-name" value=""/>
                    <xf:var name="control-value" value=""/>
                </xf:action>
                <!-- Set control itemset -->
                <xf:action class="fr-itemset-action">
                    <xf:var name="control-name" value=""/>
                    <xf:var name="response-items" value=""/>
                    <xf:var name="item-label" value=""/>
                    <xf:var name="item-value" value=""/>
                </xf:action>
                <!-- Save to dataset -->
                <xf:action class="fr-save-to-dataset-action">
                    <xf:var name="dataset-name"/>
                </xf:action>
            </action>
        </xf:instance>

    </xf:model>

</xxf:dialog>
