                <large-icon>/apps/fr/style/images/silk/link.png</large-icon>
            </icon>
            <template>
                <xforms:trigger id="" xmlns="" appearance="minimal">
                    <xforms:label ref=""/>
                    <xforms:help ref=""/>
                    <xforms:hint ref=""/>
                    <xforms:alert ref="$fr-resources/detail/labels/alert"/>
                </xforms:trigger>
            </template>
        </metadata>
    </xbl:binding>

    <xbl:binding id="fb-button" element="fr|button">
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Standardized Button</display-name>
            <display-name lang="fr">Bouton standardisé</display-name>
            <display-name lang="ru">Стандартная кнопка</display-name>
            <icon lang="en">
                <small-icon>/forms/orbeon/newbuilder/images/button.png</small-icon>
