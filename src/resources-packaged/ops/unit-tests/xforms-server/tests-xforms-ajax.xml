                        <xhtml:html>
                            <xhtml:head>
                                <xforms:model id="model">
                                    <xforms:instance id="instance">
                                        <instance>
                                            <value>0</value>
                                            <values/>
                                            <triggers/>
                                        </instance>
                                    </xforms:instance>
                                </xforms:model>
                            </xhtml:head>
                            <xhtml:body>
