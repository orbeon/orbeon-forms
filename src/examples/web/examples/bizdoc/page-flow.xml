<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:xu="http://www.xmldb.org/xupdate"
        xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
        instance-passing="forward">

    <!-- Files to serve directly (for standalone operation) -->
    <files path-info="*.gif"/>
    <files path-info="*.css"/>
    <files path-info="*.js"/>
    <files path-info="*.png"/>
    <files path-info="*.jpg"/>
    <files path-info="*.wsdl"/>
    <files path-info="*.html" mime-type="text/html"/>
    <files path-info="*.java" mime-type="text/plain"/>
    <files path-info="*.txt" mime-type="text/plain"/>

    <page id="summary" path-info="/bizdoc" xforms="summary/summary-xforms-model.xml" model="summary/summary-model.xpl" view="summary/summary-view.xsl">
        <!-- Import documents -->
        <action when="/form/action = 'import-documents'" action="summary/import-documents-action.xpl">
            <result page="summary"/>
        </action>
        <!-- View a document -->
        <action when="/form/action = 'show-detail'" action="summary/find-document-action.xpl">
            <result page="detail-1">
                <xu:update select="/form/document-id">
                    <xu:value-of select="document('input:action')/document-info/document-id"/>
                </xu:update>
                <xu:update select="/form/document">
                    <xu:copy-of select="document('input:action')/document-info/document/*"/>
                </xu:update>
            </result>
        </action>
        <!-- Create a new document: just use the detail page's default XForms instance -->
        <action when="/form/action = 'new-document'" action="summary/new-document-action.xpl">
            <result page="detail-1">
                <xu:update select="/form/document-id">
                    <xu:value-of select="document('input:action')/document-info/document-id"/>
                </xu:update>
                <xu:update select="/form/document">
                    <xu:copy-of select="document('input:action')/document-info/document/*"/>
                </xu:update>
            </result>
        </action>
        <!-- Delete documents -->
        <action when="/form/action = 'delete-documents'" action="summary/delete-documents-action.xpl">
            <result page="summary"/>
        </action>
        <!-- View XML -->
        <action when="/form/action = 'show-xml'" action="summary/find-document-action.xpl">
            <result page="xml-detail" instance-passing="redirect-exit-portal">
                <xu:update select="/document-id">
                    <xu:value-of select="document('input:action')/document-info/document-id"/>
                </xu:update>
            </result>
        </action>
    </page>

    <!-- Show XML document -->
    <page id="xml-detail" path-info="/direct/bizdoc/xml-detail" xforms="detail/xml-detail-xforms-model.xml" model="detail/xml-detail-model.xpl"/>

    <page id="detail-1" path-info="/bizdoc/detail-1" xforms="detail/detail-xforms-model.xml" view="detail/detail-view-1.xsl">
        <!-- Save the current document and documemnt is valid -->
        <action when="/form/action = 'save' and not(/form/document//*[@xxforms:valid = 'false' and not(ancestor-or-self::*[@xxforms:relevant = 'false'])])" action="detail/save-document-action.xpl">
            <result page="detail-1">
                <xu:remove select="/*"/>
                <xu:update select="/">
                    <xu:copy-of select="document('input:instance')/*"/>
                </xu:update>
                <xu:update select="/form/action"/>
                <xu:update select="/form/message">save-success</xu:update>
            </result>
        </action>
        <!-- Save the current document and documemnt is invalid -->
        <action when="/form/action = 'save' and /form/document//*[@xxforms:valid = 'false' and not(ancestor-or-self::*[@xxforms:relevant = 'false'])]">
            <result>
                <xu:update select="/form/message">save-failure</xu:update>
                <xu:update select="/form/show-errors">true</xu:update>
            </result>
        </action>
        <!-- Back: Return to the summary page -->
        <action when="/form/action = 'back'">
            <result page="summary"/>
        </action>
        <!-- Next page -->
        <action when="/form/action = 'next'">
            <result page="detail-2">
                <xu:update select="/form/document-id">
                    <xu:value-of select="document('input:instance')/*/document-id"/>
                </xu:update>
                <xu:update select="/form/document">
                    <xu:copy-of select="document('input:instance')/*/document/*"/>
                </xu:update>
            </result>
        </action>
    </page>

    <page id="detail-2" path-info="/bizdoc/detail-2" xforms="detail/detail-xforms-model.xml" view="detail/detail-view-2.xsl">
        <!-- Save the current document and documemnt is valid -->
        <action when="/form/action = 'save' and not(/form/document//*[@xxforms:valid = 'false' and not(ancestor-or-self::*[@xxforms:relevant = 'false'])])" action="detail/save-document-action.xpl">
            <result page="detail-2">
                <xu:remove select="/*"/>
                <xu:update select="/">
                    <xu:copy-of select="document('input:instance')/*"/>
                </xu:update>
                <xu:update select="/form/action"/>
                <xu:update select="/form/message">save-success</xu:update>
            </result>
        </action>
        <!-- Save the current document and documemnt is invalid -->
        <action when="/form/action = 'save' and /form/document//*[@xxforms:valid = 'false' and not(ancestor-or-self::*[@xxforms:relevant = 'false'])]">
            <result>
                <xu:message><xu:copy-of select="/*"/></xu:message>
                <xu:update select="/form/message">save-failure</xu:update>
                <xu:update select="/form/show-errors">true</xu:update>
            </result>
        </action>
        <!-- Previous page -->
        <action when="/form/action = 'back'">
            <result page="detail-1">
                <xu:update select="/form/document-id">
                    <xu:value-of select="document('input:instance')/*/document-id"/>
                </xu:update>
                <xu:update select="/form/document">
                    <xu:copy-of select="document('input:instance')/*/document/*"/>
                </xu:update>
            </result>
        </action>
        <!-- Next page -->
        <!-- ... -->
    </page>
    
    <!-- Home (for standalone operation) -->
    <page id="home" path-info="/">
        <action>
            <result page="summary"/>
        </action>
    </page>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
