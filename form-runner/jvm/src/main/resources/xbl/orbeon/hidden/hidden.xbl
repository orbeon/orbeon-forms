         xmlns:xxf="http://orbeon.org/oxf/xml/xforms"
         xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
         xmlns:xbl="http://www.w3.org/ns/xbl"
         xmlns:xxbl="http://orbeon.org/oxf/xml/xbl">

    <xbl:binding
        id="fr-hidden"
        element="fr|hidden"
        xxbl:mode="lhha binding value custom-lhha">

        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
                    <display-name lang="en">Hidden Field</display-name>
        <display-name lang="fr">Champ caché</display-name>
        <display-name lang="no">Skjult felt</display-name>
        <display-name lang="ru">Скрытое поле</display-name>
        <display-name lang="it">Campo nascosto</display-name>
        <display-name lang="de">Verstecktes Feld</display-name>
        <display-name lang="fi">Piilotettu kenttä</display-name>
        <display-name lang="es">Campo oculto</display-name>
        <display-name lang="nl">Verborgen veld</display-name>
        <display-name lang="pt">Campo oculto</display-name>
        <display-name lang="sv">Dolt fält</display-name>
        <display-name lang="ar">حقل مخفي</display-name>
        <display-name lang="pl">Ukryte pole</display-name>
            <icon>
                <icon-class>fa fa-fw fa-eye-slash</icon-class>
            </icon>
            <templates>
                <view>
                    <fr:hidden id="" ref="" xmlns="">
