<properties xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:oxf="http://www.orbeon.com/oxf/processors"
            xmlns:xi="http://www.w3.org/2001/XInclude">

    <xi:include href="oxf:/config/properties-internal.xml"/>
    <xi:include href="oxf:/config/properties-base.xml"/>
    <xi:include href="oxf:/config/properties-xforms.xml"/>
    <xi:include href="oxf:/config/properties-form-runner.xml"/>
    <xi:include href="oxf:/config/properties-form-builder.xml"/>

    <property as="xs:boolean" name="oxf.show-version"                                        value="true"/>
    <property as="xs:boolean" name="oxf.http.exceptions"                                     value="true"/>

    <property as="xs:string"  processor-name="oxf:builtin-saxon"        name="location-mode" value="smart"/>
    <property as="xs:string"  processor-name="oxf:unsafe-builtin-saxon" name="location-mode" value="smart"/>

    <property as="xs:string"  name="oxf.xforms.location-mode"                                value="smart"/>

    <property as="xs:boolean" name="oxf.xforms.resources.encode-version"                     value="false"/>
    <property as="xs:integer" name="oxf.xforms.show-recoverable-errors"                      value="0"/>

    <xi:include href="oxf:/config/properties-local.xml"/>
    <xi:include href="oxf:/config/properties-local-dev.xml"/>

</properties>
