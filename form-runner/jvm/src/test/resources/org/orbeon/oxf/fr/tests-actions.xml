                <xh:head>
                    <xf:model id="fr-form-model">

                        <fr:listener
                            version="2018.2"
                            events="form-load-after-controls"
                            actions="my-action"/>

                        <fr:action name="my-action" version="2018.2">
                            <fr:alert message="1"/>
                            <fr:service-call service="my-service-1"/>

