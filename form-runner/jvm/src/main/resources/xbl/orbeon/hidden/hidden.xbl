                        <xf:hint   ref=""/>
                        <xf:help   ref=""/>
                        <xf:alert  ref=""/>
                    </fr:hidden>
                </view>
            </templates>
        </metadata>

        <xbl:resources>
            <xbl:style src="/xbl/orbeon/hidden/hidden.css"/>
        </xbl:resources>

        <xbl:template><xh:i class="fa fa-eye-slash" fr:keep-if-design-time="true"/></xbl:template>
    </xbl:binding>
</xbl:xbl>
