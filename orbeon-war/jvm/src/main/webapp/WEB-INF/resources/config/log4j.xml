    <!-- Prevent extra display of eXist paging activity -->
    <category name="org.exist.storage.btree.Paged">
        <priority value="warn"/>
    </category>

    <category name="org.exist.storage.DBBroker">
        <priority value="warn"/>
    </category>

    <category name="org.exist.storage.BrokerPool">
        <priority value="warn"/>
    </category>

