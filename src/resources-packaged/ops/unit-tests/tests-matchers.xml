<group description="Matchers" xmlns:p="http://www.orbeon.com/oxf/pipeline" xmlns:oxf="http://www.orbeon.com/oxf/processors">

    <test description="Perl5" name="oxf:perl5-matcher">
        <input name="data">
            <text>/a/bc/de.fgh</text>
        </input>
        <input name="config">
            <regexp>/./(.*)/([^\.]*)\.fgh</regexp>
        </input>
        <output name="data">
            <result>
                <matches>true</matches>
                <group>bc</group>
                <group>de</group>
            </result>
        </output>
    </test>

    <test description="Glob" name="oxf:glob-matcher">
        <input name="data">
            <text>/a/bc/de.fgh</text>
        </input>
        <input name="config">
            <regexp>/?/*/de.fgh</regexp>
        </input>
        <output name="data">
            <result>
                <matches>true</matches>
            </result>
        </output>
    </test>

</group>
