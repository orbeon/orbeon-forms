<element name="config" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">
    <interleave>
        <optional>
            <element name="host">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="port">
                <data type="integer"/>
            </element>
        </optional>
        <optional>
            <element name="bind-dn">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="password">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="referral">
				<choice>
					<value>follow</value>
					<value>ignore</value>
					<value>throw</value>
				</choice>
            </element>
        </optional>
        <element name="root-dn">
            <data type="string"/>
        </element>
        <optional>
            <element name="protocol">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <element name="scope">
				      <choice>
					      <value>SUBTREE</value>
			       		<value>ONELEVEL</value>
      					<value>ALLLEVELS</value>
      					<value>OBJECT</value>
      				</choice>
            </element>
        </optional>
        <zeroOrMore>
            <element name="attribute">
                <data type="string"/>
            </element>
        </zeroOrMore>
    </interleave>
</element>
