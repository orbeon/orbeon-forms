<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="comment">
            <element name="comment-id">
                <data type="string"/>
            </element>
            <element name="blog-id">
                <data type="string"/>
            </element>
            <element name="post-id">
                <data type="string"/>
            </element>
            <element name="poster-info">
                <element name="name">
                    <data type="string"/>
                </element>
                <element name="email">
                    <data type="string"/>
                </element>
                <element name="uri">
                    <data type="anyURI"/>
                </element>
            </element>
            <element name="comment-info">
                <element name="title">
                    <data type="string"/>
                </element>
                <element name="content">
                    <attribute name="word-count">
                        <data type="nonNegativeInteger"/>
                    </attribute>
                    <attribute name="character-count">
                        <data type="nonNegativeInteger"/>
                    </attribute>
                    <data type="string"/>
                </element>
                <element name="date-created">
                    <data type="dateTime"/>
                </element>
            </element>
        </element>
    </start>

</grammar>
