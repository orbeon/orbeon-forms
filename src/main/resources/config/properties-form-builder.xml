<properties xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:oxf="http://www.orbeon.com/oxf/processors">

    <property as="xs:string"  name="oxf.fb.toolbox.group.text.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/text-controls.xbl
        oxf:/forms/orbeon/builder/xbl/text-input.xbl
        oxf:/forms/orbeon/builder/xbl/text-textarea.xbl
        oxf:/xbl/orbeon/autosize-textarea/autosize-textarea.xbl
        oxf:/xbl/orbeon/tinymce/tinymce.xbl
        oxf:/forms/orbeon/builder/xbl/text-secret.xbl
        oxf:/xbl/orbeon/character-counter/character-counter.xbl
    </property>

    <!-- Toolbox -->
    <property as="xs:string"  name="oxf.fb.toolbox.group.special.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/utility-controls.xbl
        oxf:/xbl/orbeon/explanation/explanation.xbl
        oxf:/forms/orbeon/builder/xbl/text-output.xbl
        oxf:/xbl/orbeon/hidden/hidden.xbl
    </property>

    <property as="xs:string"  name="oxf.fb.toolbox.group.typed.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/typed-controls.xbl
        oxf:/xbl/orbeon/number/number.xbl
        oxf:/xbl/orbeon/currency/currency.xbl
        oxf:/forms/orbeon/builder/xbl/typed-email.xbl
        oxf:/xbl/orbeon/us-phone/us-phone.xbl
        oxf:/xbl/orbeon/us-state/us-state.xbl
    </property>

    <property as="xs:string"  name="oxf.fb.toolbox.group.dateTime.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/date-time-controls.xbl
        oxf:/xbl/orbeon/date/date.xbl
        oxf:/xbl/orbeon/time/time.xbl
        oxf:/xbl/orbeon/datetime/datetime.xbl
        oxf:/xbl/orbeon/dropdown-date/dropdown-date.xbl
        oxf:/xbl/orbeon/fields-date/fields-date.xbl
    </property>

    <property as="xs:string"  name="oxf.fb.toolbox.group.selection.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/selection-controls.xbl
        oxf:/xbl/orbeon/dropdown-select1/dropdown-select1.xbl
        oxf:/forms/orbeon/builder/xbl/open-select1-minimal.xbl
        oxf:/xbl/orbeon/dropdown-select1-search/dropdown-select1-search.xbl
        oxf:/xbl/orbeon/databound-select1/databound-select1.xbl
        oxf:/xbl/orbeon/databound-select1-search/databound-select1-search.xbl
        oxf:/forms/orbeon/builder/xbl/selection-select1-full.xbl
        oxf:/xbl/orbeon/open-select1/open-select1.xbl
        oxf:/forms/orbeon/builder/xbl/selection-select-full.xbl
        oxf:/xbl/orbeon/box-select/box-select.xbl
        oxf:/xbl/orbeon/checkbox-input/checkbox-input.xbl
        oxf:/xbl/orbeon/yesno-input/yesno-input.xbl
        oxf:/forms/orbeon/builder/xbl/selection-input-boolean.xbl
    </property>

    <property as="xs:string"  name="oxf.fb.toolbox.group.attachment.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/attachment-controls.xbl
        oxf:/xbl/orbeon/attachment/attachment.xbl
        oxf:/forms/orbeon/builder/xbl/attachment-multiple.xbl
        oxf:/xbl/orbeon/image-attachment/image-attachment.xbl
        oxf:/xbl/orbeon/image/image.xbl
        oxf:/xbl/orbeon/wpaint/wpaint.xbl
    </property>

    <property as="xs:string"  name="oxf.fb.toolbox.group.button.uri.*.*">
        oxf:/forms/orbeon/builder/xbl/button-controls.xbl
        oxf:/forms/orbeon/builder/xbl/button-trigger.xbl
        oxf:/forms/orbeon/builder/xbl/button-trigger-minimal.xbl
    </property>

    <property as="xs:string"  name="oxf.xforms.xbl.mapping.fb">
        http://orbeon.org/oxf/xml/form-builder
    </property>

    <property as="xs:boolean" name="oxf.fb.menu.schema"                                         value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.pdf"                                            value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.edit-source"                                    value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.permissions"                                    value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.permissions.owner-group"                        value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.email"                                          value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.services.http"                                  value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.services.database"                              value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.actions"                                        value="true"/>

    <property as="xs:string"  name="oxf.fb.publish.buttons"                                     value="new summary"/>
    <property as="xs:string"  name="oxf.fb.publish.version"                                     value="default-to-select"/>

    <property as="xs:boolean" name="oxf.fb.metadata.logo"                                       value="true"/>
    <property as="xs:integer" name="oxf.fb.section.close"                                       value="100"/>
    <property as="xs:string"  name="oxf.fb.tinymce.config"                                      value=""/>

    <!-- Form Builder detail page buttons -->
    <property as="xs:string"  name="oxf.fr.detail.loading-indicator.save.orbeon.builder"        value="inline"/>
    <property as="xs:string"  name="oxf.fr.detail.loading-indicator.publish.orbeon.builder"     value="modal"/>
    <property as="xs:string"  name="oxf.fr.detail.buttons.orbeon.builder">
        summary new test|test-pdf|test-offline|test-formulas publish save
    </property>

    <!-- Form Builder summary page  -->
    <property as="xs:string"  name="oxf.fr.summary.buttons.orbeon.builder">
        home delete duplicate new
    </property>

    <!-- Available languages -->
    <property as="xs:string"  name="oxf.fr.available-languages.orbeon.builder"                  value="en es fr it de pt sv fi"/>

    <!-- Processes associated with Form Builder buttons -->
    <property as="xs:string"  name="oxf.fr.detail.process.close.orbeon.builder">
        summary
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.new.orbeon.builder">
        navigate(uri = "/fr/orbeon/builder/new")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.excel-export.orbeon.builder">
        xf:dispatch(name = "fb-excel-export")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.xml-export.orbeon.builder">
        xf:dispatch(name = "fb-xml-export")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.test.orbeon.builder">
        xf:dispatch(name = "fb-test-form")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.test-formulas.orbeon.builder">
        xf:dispatch(name = "fb-test-formulas")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.test-offline.orbeon.builder">
        xf:dispatch(name = "fb-test-offline")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.test-pdf.orbeon.builder">
        xf:dispatch(name = "fb-test-pdf-show-dialog")
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.publish.orbeon.builder">
        xf:show(
            dialog = "fb-publish-dialog",
            app    = "{xxf:instance('fb-form-instance')/xh:head/xf:model[@id = 'fr-form-model']/xf:instance[@id = 'fr-form-metadata']/*/application-name}",
            form   = "{xxf:instance('fb-form-instance')/xh:head/xf:model[@id = 'fr-form-model']/xf:instance[@id = 'fr-form-metadata']/*/form-name}"
        )
    </property>

    <property as="xs:string"  name="oxf.fr.detail.process.save.orbeon.builder">
        save-final
    </property>

    <property as="xs:string"  name="oxf.xforms.xbl.fr.grid.appearance.orbeon.builder"           value=""/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.section.appearance.orbeon.builder"        value=""/>

    <!-- Explicitly disable the lease feature. See https://github.com/orbeon/orbeon-forms/issues/3414 -->
    <property
        as="xs:boolean"
        name="oxf.fr.detail.lease.enabled.orbeon.builder"
        value="false"/>

    <!-- https://github.com/orbeon/orbeon-forms/issues/5229 -->
    <property
        as="xs:string"
        name="oxf.fr.detail.html-page-layout.orbeon.builder"
        value="fixed"/>

    <!-- For the Form Builder UI -->
    <property as="xs:string"  name="oxf.xforms.xbl.fr.number.field-width.orbeon.builder"   value="full"/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.currency.field-width.orbeon.builder" value="full"/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.date.field-width.orbeon.builder"     value="full"/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.time.field-width.orbeon.builder"     value="full"/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.datetime.field-width.orbeon.builder" value="full"/>
    <property as="xs:string"  name="oxf.xforms.xbl.fr.us-phone.field-width.orbeon.builder" value="full"/>

</properties>
