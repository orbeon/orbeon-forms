                                            </xh:ul>
                                        </xh:li>
                                        <xh:li>
                                            relevant-top-level-section-ids (<xf:output value="count($relevant-top-level-section-ids)"/>):
                                            <xh:ul>
                                                <xf:repeat ref="$relevant-top-level-section-ids">
                                                    <xh:li><xf:output value="."/></xh:li>
