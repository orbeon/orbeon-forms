<xh:div
    xmlns:xh="http://www.w3.org/1999/xhtml"
    xmlns:xf="http://www.w3.org/2002/xforms"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xxf="http://orbeon.org/oxf/xml/xforms"
    xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
    xmlns:fb="http://orbeon.org/oxf/xml/form-builder"
    xmlns:toolboxOps="java:org.orbeon.oxf.fb.ToolboxOps"
    xmlns:fbf="java:org.orbeon.oxf.fb.FormBuilderXPathApi"
    xmlns:xbl="http://www.w3.org/ns/xbl"

    class="fb-toolbox">

    <xf:var name="lang" value="xxf:instance('fr-language-instance')"/>

    <xh:div class="fb-toolbox-inside">

        <xh:div class="fb-tools">
            <xh:div class="fb-toolbox-icons-tools fb-toolbox-top-icons">

                <!-- Form settings -->
                <xf:trigger appearance="minimal" class="fb-form-settings-button">
                    <xf:label><xh:i class="fa fa-cogs fa-fw" title="{$form-resources/dialog-form-settings/open/label}"/></xf:label>
                    <xf:action ev:event="DOMActivate">
                        <!-- Open the dialog in "edit" mode -->
                        <xxf:show dialog="dialog-form-settings">
                            <xf:property name="lang"                          value="$fb-lang"/>
                            <xf:property name="langs"                         value="$resources/resource/@xml:lang/string()"/>
                            <xf:property name="mode"                          value="'edit'"/>
                            <xf:property name="app"                           value="bind('application-name-bind')"/>
                            <xf:property name="form"                          value="bind('form-name-bind')"/>
                            <xf:property name="title"                         value="bind('title-bind')"/>
                            <xf:property name="description"                   value="bind('description-bind')"/>
                            <xf:property name="description-mediatype"         value="bind('description-bind')/@mediatype/string()"/>
                            <xf:property name="created-with-version"          value="bind('created-with-version-bind')"/>
                            <xf:property name="updated-with-versions"         value="bind('metadata-bind')/updated-with-version/string()"/>
                            <xf:property name="singleton"                     value="bind('singleton-bind')"/>
                            <xf:property name="attachment-max-size"           value="bind('attachment-max-size-bind')"/>
                            <xf:property name="attachment-max-size-aggregate" value="bind('attachment-max-size-aggregate-bind')"/>
                            <xf:property name="attachment-mediatypes"         value="bind('attachment-mediatypes-bind')"/>
                            <xf:property name="wizard"                        value="bind('wizard-bind')"/>
                            <xf:property name="wizard-mode"                   value="bind('wizard-mode-bind')"/>
                            <xf:property name="wizard-subsections-nav"        value="bind('wizard-subsections-nav-bind')"/>
                            <xf:property name="wizard-subsections-toc"        value="bind('wizard-subsections-toc-bind')"/>
                            <xf:property name="wizard-separate-toc"           value="bind('wizard-separate-toc-bind')"/>
                            <xf:property name="wizard-section-status"         value="bind('wizard-section-status-bind')"/>
                            <xf:property name="labels"                        value="bind('labels-bind')"/>
                            <xf:property name="hints"                         value="bind('hints-bind')"/>
                            <xf:property name="data-migration"                value="bind('data-migration-bind')"/>
                            <xf:property name="rendered-page-orientation"     value="bind('rendered-page-orientation-bind')"/>
                            <xf:property name="rendered-page-size"            value="bind('rendered-page-size-bind')"/>
                            <xf:property name="readonly-disable-calculate"    value="bind('readonly-disable-calculate-bind')"/>
                            <xf:property name="relevant"                      value="fbf:readDenormalizedCalculatedMip((), 'relevant')"/>
                            <xf:property name="readonly"                      value="fbf:readDenormalizedCalculatedMip((), 'readonly')"/>
                            <xf:property name="html-page-layout"              value="bind('html-page-layout-bind')"/>
                            <xf:property name="analysis-calculate"            value="bind('analysis-calculate-bind')"/>
                            <xf:property name="email"                         value="bind('email-bind')"/>
                            <xf:property name="xbl"                           value="bind('xbl-bind')"/>
                            <xf:property name="component-bindings"            value="$component-bindings"/>
                        </xxf:show>
                    </xf:action>
                </xf:trigger>

                <!-- Clipboard operations -->
                <xf:trigger appearance="minimal" class="fb-cut-button" ref="$xcv/cut-trigger" id="cut-trigger">
                    <xf:label>
                        <xh:i
                            title="{$form-resources/cut/label}"
                            class="fa fa-cut fa-fw"/>
                    </xf:label>
                    <xf:action ev:event="DOMActivate" type="xpath">
                        toolboxOps:cutToClipboard($current-td)
                    </xf:action>
                </xf:trigger>
                <xf:trigger appearance="minimal" class="fb-copy-button" ref="$xcv/copy-trigger" id="copy-trigger">
                    <xf:label>
                        <xh:i
                            title="{$form-resources/copy/label}"
                            class="fa fa-copy fa-fw"/>
                    </xf:label>
                    <xf:action ev:event="DOMActivate" type="xpath">
                        toolboxOps:copyToClipboard($current-td)
                    </xf:action>
                </xf:trigger>
                <xf:trigger appearance="minimal" class="fb-paste-button" ref="$xcv/paste-trigger" id="paste-trigger">
                    <xf:label>
                        <xh:i
                            title="{$form-resources/paste/label}"
                            class="fa fa-paste fa-fw"/>
                    </xf:label>
                    <xf:action ev:event="DOMActivate" type="xpath">
                        toolboxOps:pasteFromClipboard()
                    </xf:action>
                </xf:trigger>
                <!--<xf:group ref=".[exists($xcv/control/*/@id)]">-->
                    <!--<xh:i-->
                        <!--title="{$form-resources/clipboard/label}"-->
                        <!--class="fb-clipboard fa fa-clipboard fa-fw"/>-->
                <!--</xf:group>-->

                <xf:var
                    name="undo-title"
                    value="
                        if (not(xxf:readonly($undo/undo-trigger))) then
                            xxf:format-message(
                                $form-resources/undo-redo/undo,
                                $form-resources/undo-redo/*[name() = $undo/undos/undo[last()]/@name]/string()
                            )
                        else
                            ''"/>

                <xf:trigger appearance="minimal" class="fb-undo-button" ref="$undo/undo-trigger" id="undo-trigger">
                    <xf:label>
                        <xh:i title="{$undo-title}" class="fa fa-undo fa-fw"/>
                    </xf:label>
                    <xf:action ev:event="DOMActivate" type="xpath">
                        fbf:undoAction()
                    </xf:action>
                </xf:trigger>

                <xf:var
                    name="redo-title"
                    value="
                        if (not(xxf:readonly($undo/redo-trigger))) then
                            xxf:format-message(
                                $form-resources/undo-redo/redo,
                                $form-resources/undo-redo/*[name() = $undo/redos/redo[last()]/@name]/string()
                            )
                        else
                            ''"/>

                <xf:trigger appearance="minimal" class="fb-redo-button" ref="$undo/redo-trigger" id="redo-trigger">
                    <xf:label>
                        <xh:i title="{$redo-title}" class="fa fa-repeat fa-fw"/>
                    </xf:label>
                    <xf:action ev:event="DOMActivate" type="xpath">
                        fbf:redoAction()
                    </xf:action>
                </xf:trigger>

            </xh:div>

        </xh:div>

        <fr:tabbable id="fb-toolbox-tabs">
            <fr:tab id="fb-toolbox-controls-tab">
                <xf:label value="$form-resources/controls/label"/>

                <!-- Sections, grids, etc. toolbox -->
                <xh:div class="fb-tools">
                    <xf:group>
                        <xf:label class="fb-tools-title" value="$form-resources/form-structure/label"/>
                        <!-- Add new section -->
                        <xh:div class="fb-tool">
                            <xf:trigger id="insert-new-section-trigger" ref="instance('fb-variables')/section-trigger">
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-newspaper-o"/>
                                    <xf:output value="$form-resources/new-section/label"/>
                                </xf:label>
                                <xf:action ev:event="DOMActivate" type="xpath">
                                    toolboxOps:insertNewSection(true())
                                </xf:action>
                            </xf:trigger>
                        </xh:div>
                        <!-- Add grids -->
                        <xh:div class="fb-tool">
                            <xf:trigger id="insert-new-grid-trigger" ref="instance('fb-variables')/grid-trigger" >
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-table"/>
                                    <xf:output value="$form-resources/new-grid/label"/>
                                </xf:label>
                                <xf:action ev:event="DOMActivate" type="xpath">
                                    toolboxOps:insertNewGrid(false())
                                </xf:action>
                            </xf:trigger>
                        </xh:div>
                        <xh:div class="fb-tool">
                            <xf:trigger id="insert-new-repeated-grid-trigger" ref="instance('fb-variables')/grid-trigger" >
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-table"/>
                                    <xf:output value="$form-resources/new-repeated-grid/label"/>
                                </xf:label>
                                <xf:action ev:event="DOMActivate" type="xpath">
                                    toolboxOps:insertNewGrid(true())
                                </xf:action>
                            </xf:trigger>
                        </xh:div>
                    </xf:group>
                </xh:div>

                <!-- Controls and components -->
                <xf:repeat ref="xxf:instance('fb-components-instance')/xbl:xbl[xbl:binding]">

                    <xf:var
                        name="has-section-component"
                        as="xs:boolean"
                        value="
                            exists(
                                xbl:binding[
                                    not(
                                        fb:metadata/fb:toolbox[@show = 'false']
                                    ) and
                                        xxf:has-class('fr-section-component', .)
                                ]
                            )"/>

                    <xh:div class="fb-tools">
                        <xf:group>
                            <!-- Display localized name -->
                            <xf:label ref="(fb:metadata/fb:display-name[@lang = $lang], fb:metadata/fb:display-name[1])"/>

                            <xf:group ref=".[$has-section-component]">

                                <xf:var
                                    xmlns:frf="java:org.orbeon.oxf.fr.FormRunner"
                                    name="is-global-library"
                                    value="
                                        frf:findAppFromSectionTemplateUri(
                                            namespace-uri-for-prefix('component', .)
                                        ) = frf:globalLibraryAppName()
                                "/>

                                <xf:var
                                    name="elem-name"
                                    value="
                                        if ($is-global-library) then
                                            'orbeon'
                                        else
                                            'app'"/>

                                <xf:select1 appearance="minimal" ref="bind('library-versions-bind')/*[name() = $elem-name]">
                                    <xf:label class="xforms-hidden" ref="$form-resources/library-version/label"/>
                                    <xf:itemset ref="bind('fb-toolbox-libraries-bind')/*[name() = $elem-name]/version">
                                        <xf:label ref="xxf:format-message($form-resources/library-version/item/label, xs:integer(.))"/>
                                        <xf:value ref="."/>
                                    </xf:itemset>

                                    <xf:action event="xforms-value-changed">
                                        <xf:dispatch name="fb-load-toolbox-action" targetid="fb-toolbox-model">
                                            <xf:property name="deannotate" value="true()"/>
                                        </xf:dispatch>
                                    </xf:action>

                                </xf:select1>
                            </xf:group>

                            <!-- TODO: See also BindingOps. Can we reduce duplication of the logic? -->
                            <xf:repeat ref="xbl:binding[not(fb:metadata/fb:toolbox[@show = 'false'])]" id="fb-components-template-repeat">

                                <xf:var name="binding" value="." as="element(xbl:binding)"/>

                                <!-- Whether the component is a section component or not -->
                                <xf:var
                                    name="is-section-component"
                                    as="xs:boolean"
                                    value="xxf:has-class('fr-section-component', $binding)"/>

                                <xf:var name="metadata" value="$binding/fb:metadata"/>

                                <!-- TODO: link/button to edit library if `$is-section-component` -->

                                <xh:div class="fb-tool">
                                    <!-- The class is added so unit tests can find the trigger more easily -->
                                    <xf:trigger id="fb-add-component-trigger"
                                                ref="instance('fb-variables')/(if ($is-section-component) then section-trigger else control-trigger)"
                                                class="fb-add-{$binding/@id} {if ($is-section-component) then 'fb-add-template' else 'fb-add-control'}">
                                        <xf:label>
                                            <xf:output mediatype="text/html"
                                                value="
                                                    concat(
                                                        (: Icon :)
                                                        if (exists($metadata/fb:icon/fb:small-icon)) then
                                                            concat('&lt;img src=&quot;', ($metadata/fb:icon/fb:small-icon)[1], '&quot; alt=&quot;&quot;/>')
                                                        else if (exists($metadata/fb:icon/fb:icon-class)) then
                                                            concat('&lt;i class=&quot;', ($metadata/fb:icon/fb:icon-class)[1], '&quot;/>')
                                                        else
                                                            '&lt;i class=&quot;fa fa-fw fa-puzzle-piece&quot;/>',
                                                        (: Description :)
                                                        ($metadata/fb:display-name[@lang = $lang], $metadata/fb:display-name[1])[1]
                                                    )
                                            "/>
                                        </xf:label>
                                        <xf:action ev:event="DOMActivate">
                                            <xf:action if="$is-section-component" type="xpath">
                                                toolboxOps:insertNewSectionTemplate($model, $binding)
                                            </xf:action>
                                            <xf:action if="not($is-section-component)">
                                                <xf:action type="xpath">
                                                    toolboxOps:insertNewControl($binding)
                                                </xf:action>
                                                <xf:var
                                                    name="namespaced-id"
                                                    value="fbf:buildFormBuilderControlNamespacedIdOrEmpty($selected-cell)"/>
                                                <xf:action type="javascript">
                                                    <xf:param
                                                        name="namespacedId"
                                                        value="$namespaced-id"/>
                                                    <xf:body>
                                                        ORBEON.builder.private.API.controlAdded.fire(namespacedId);
                                                    </xf:body>
                                                </xf:action>
                                            </xf:action>
                                        </xf:action>
                                    </xf:trigger>
                                </xh:div>
                            </xf:repeat>
                        </xf:group>
                    </xh:div>
                </xf:repeat>
            </fr:tab>
            <fr:tab id="fb-toolbox-advanced-tab">
                <xf:label value="$form-resources/advanced/label"/>

                <xh:div class="fb-tools">
                    <xh:div class="fb-tool">

                        <!-- Workflow and permissions -->
                        <xf:trigger bind="fb-toolbox-workflow-bind">
                            <xf:label>
                                <xh:i class="fa fa-lock fa-fw"/>
                                <xf:output value="$form-resources/dialog-workflow/label"/>
                            </xf:label>
                            <xf:action event="DOMActivate">
                                <xf:dispatch if="$is-pe"      name="fb-show-dialog" targetid="fb-workflow20201-dialog"/>
                                <xf:dispatch if="not($is-pe)" name="fr-show"        targetid="fb-pe-dialog"/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger bind="fb-toolbox-permissions-bind">
                            <xf:label>
                                <xh:i class="fa fa-lock fa-fw"/>
                                <xf:output value="$form-resources/dialog-permissions/label"/>
                            </xf:label>
                            <xf:action event="DOMActivate">
                                <xf:dispatch if="$is-pe"      name="fb-show-dialog" targetid="fb-permissions-dialog"/>
                                <xf:dispatch if="not($is-pe)" name="fr-show"        targetid="fb-pe-dialog" />
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger bind="fb-toolbox-email-bind">
                            <xf:label>
                                <xh:i class="fa fa-envelope fa-fw"/>
                                <xf:output value="$form-resources/dialog-email-settings/label"/>
                            </xf:label>
                            <xf:action event="DOMActivate">
                                <xf:dispatch if="$is-pe"      name="fb-show-dialog" targetid="dialog-email-settings">
                                    <xf:property name="lang"  value="$fb-lang"/>
                                    <xf:property name="langs" value="$resources/resource/@xml:lang/string()"/>
                                    <xf:property name="email" value="bind('email-bind')"/>
                                </xf:dispatch>
                                <xf:dispatch if="not($is-pe)" name="fr-show"        targetid="fb-pe-dialog" />
                            </xf:action>
                        </xf:trigger>

                        <!-- Edit Source -->
                        <xf:trigger class="fb-edit-source-button" bind="fb-toolbox-edit-bind">
                            <xf:label>
                                <xh:i class="fa fa-code fa-fw"/>
                                <xf:output value="$form-resources/edit-source/label"/>
                            </xf:label>
                            <xxf:show ev:event="DOMActivate" dialog="dialog-edit-source"/>
                        </xf:trigger>

                        <!-- Reload components -->
                        <xf:trigger class="fb-reload-components-button" xxf:modal="true">
                            <xf:label>
                                <xh:i class="fb-container-cut fa fa-refresh fa-fw"/>
                                <xf:output value="$form-resources/reload-components/label"/>
                            </xf:label>
                            <xf:action ev:event="DOMActivate">
                                <xf:dispatch name="fb-load-toolbox-action" targetid="fb-toolbox-model">
                                    <xf:property name="deannotate" value="true()"/>
                                </xf:dispatch>
                            </xf:action>
                        </xf:trigger>

                    </xh:div>
                </xh:div>

                <xf:group
                    xxf:element="div"
                    class="fb-tools"
                    ref="(bind('fb-toolbox-schema-bind'), bind('fb-toolbox-pdf-bind'))[xxf:relevant()]">

                    <!-- Attachments -->
                    <xf:group>
                        <xf:label value="$form-resources/attachments/label"/>
                        <xh:div class="fb-tool">
                            <xf:group bind="fb-toolbox-schema-bind">
                                <!-- Upload XML Schema -->
                                <xf:trigger>
                                    <xf:label>
                                        <xh:i class="fa fa-w fa-file-code-o"/>
                                        <xh:span>
                                            <xf:output value="if (exists($model/xs:schema)) then $form-resources/change-schema/label else $form-resources/upload-schema/label"/>
                                        </xh:span>
                                    </xf:label>
                                    <xxf:show ev:event="DOMActivate" if="$is-pe" dialog="fb-schema-upload-dialog"/>
                                    <xf:dispatch ev:event="DOMActivate" if="not($is-pe)" targetid="fb-pe-dialog" name="fr-show"/>
                                </xf:trigger>
                            </xf:group>
                            <xf:group bind="fb-toolbox-pdf-bind">
                                <!-- Upload PDF Template -->
                                <xf:trigger>
                                    <xf:label>
                                        <xh:i class="fa fa-w fa-file-pdf-o"/>
                                        <xh:span>
                                            <xf:output value="$form-resources/pdf-templates/label"/>
                                        </xh:span>
                                    </xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:dispatch if="$is-pe" name="fb-show-dialog" targetid="dialog-pdf">
                                            <xf:property name="pdf-attachments" value="bind('pdf-attachments-bind')"/>
                                        </xf:dispatch>
                                        <xf:dispatch if="not($is-pe)" name="fr-show"        targetid="fb-pe-dialog"/>
                                    </xf:action>
                                </xf:trigger>
                            </xf:group>
                        </xh:div>
                    </xf:group>
                </xf:group>

                <!-- Actions -->
                <xf:group xxf:element="div" class="fb-tools" bind="fb-toolbox-actions-bind">
                    <xf:group class="fb-hide-alert">
                        <xf:label ref="$form-resources/actions/label"/>
                        <!-- Repeat over existing bindings -->
                        <xf:var name="actions" value="$model/fb:action[ends-with(@id, '-binding')]"/>
                        <xf:var name="moves"   value="count($actions) gt 1"/>
                        <fr:dnd-repeat ref="$actions">
                            <xh:div class="{'fb-tool', 'xforms-dnd-item', 'xforms-dnd-moves'[$moves]}">
                                <xh:i class="fa fa-fw fa-bars fb-action-service-grab"/>
                                <xf:var name="current-action" value="."/>
                                <xf:var name="binding-name" value="substring-before(@id, '-binding')"/>
                                <xf:trigger>
                                    <xf:label value="$binding-name"/>
                                    <xxf:show ev:event="DOMActivate" dialog="fb-action-dialog">
                                        <xf:property name="binding-name" value="$binding-name"/>
                                    </xxf:show>
                                </xf:trigger>
                            </xh:div>
                        </fr:dnd-repeat>
                        <xh:div class="fb-tool">
                            <xf:trigger class="fb-add-action-button">
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-plus-circle"/>
                                    <xf:output value="$form-resources/add/label"/>
                                </xf:label>
                                <xxf:show ev:event="DOMActivate" if="$is-pe" dialog="fb-action-dialog"/>
                                <xf:dispatch ev:event="DOMActivate" if="not($is-pe)" targetid="fb-pe-dialog" name="fr-show"/>
                            </xf:trigger>
                        </xh:div>
                    </xf:group>
                </xf:group>

                <!-- Services -->
                <xf:group xxf:element="div" class="fb-tools" bind="fb-toolbox-services-http-bind">
                    <xf:group class="fb-hide-alert">
                        <xf:label ref="$form-resources/http-services/label"/>
                        <!-- Repeat over existing services -->
                        <xf:var name="services" value="$model/fb:submission[ends-with(@id, '-submission') and xxf:has-class('fr-service')]"/>
                        <xf:var name="moves"    value="count($services) gt 1"/>
                        <fr:dnd-repeat ref="$services">
                            <xh:div class="{'fb-tool', 'xforms-dnd-item', 'xforms-dnd-moves'[$moves]}">
                                <xh:i class="fa fa-fw fa-bars fb-action-service-grab"/>
                                <xf:var name="current-submission" value="."/>
                                <xf:var name="submission-name" value="substring-before(@id, '-submission')"/>
                                <xf:trigger>
                                    <xf:label value="$submission-name"/>

                                    <xf:dispatch ev:event="DOMActivate" name="fb-show-dialog" targetid="dialog-http-services">
                                        <xf:property name="submission-name" value="$submission-name"/>
                                    </xf:dispatch>
                                </xf:trigger>
                            </xh:div>
                        </fr:dnd-repeat>
                        <xh:div class="fb-tool">
                            <xf:trigger class="fb-add-http-service-button">
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-plus-circle"/>
                                    <xf:output value="$form-resources/add/label"/>
                                </xf:label>
                                <xf:dispatch ev:event="DOMActivate" if="$is-pe" name="fb-show-dialog" targetid="dialog-http-services">
                                    <xf:property name="submission-name" value="()"/>
                                </xf:dispatch>
                                <xf:dispatch ev:event="DOMActivate" if="not($is-pe)" targetid="fb-pe-dialog" name="fr-show"/>
                            </xf:trigger>
                        </xh:div>
                    </xf:group>
                </xf:group>

                <!-- Database services -->
                <xf:group xxf:element="div" class="fb-tools" bind="fb-toolbox-services-database-bind">
                    <xf:group class="fb-hide-alert">
                        <xf:label ref="$form-resources/database-services/label"/>
                        <!-- Repeat over existing services -->
                        <xf:var name="services" value="$model/fb:submission[ends-with(@id, '-submission') and xxf:has-class('fr-database-service')]"/>
                        <xf:var name="moves"    value="count($services) gt 1"/>
                        <fr:dnd-repeat ref="$services">
                            <xh:div class="{'fb-tool', 'xforms-dnd-item', 'xforms-dnd-moves'[$moves]}">
                                <xh:i class="fa fa-fw fa-bars fb-action-service-grab"/>
                                <xf:var name="current-submission" value="."/>
                                <xf:var name="submission-name" value="substring-before(@id, '-submission')"/>
                                <xf:trigger>
                                    <xf:label value="$submission-name"/>
                                    <xxf:show ev:event="DOMActivate" dialog="fb-database-service-dialog">
                                        <xf:property name="submission-name" value="$submission-name"/>
                                    </xxf:show>
                                </xf:trigger>
                            </xh:div>
                        </fr:dnd-repeat>
                        <xh:div class="fb-tool">
                            <xf:trigger class="fb-add-service-database-button">
                                <xf:label>
                                    <xh:i class="fa fa-fw fa-plus-circle"/>
                                    <xf:output value="$form-resources/add/label"/>
                                </xf:label>
                                <xxf:show ev:event="DOMActivate" if="$is-pe" dialog="fb-database-service-dialog"/>
                                <xf:dispatch ev:event="DOMActivate" if="not($is-pe)" targetid="fb-pe-dialog" name="fr-show"/>
                            </xf:trigger>
                        </xh:div>
                    </xf:group>
